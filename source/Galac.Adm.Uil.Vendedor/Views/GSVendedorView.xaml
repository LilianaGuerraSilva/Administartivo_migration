<UserControl
    x:Class="Galac.Adm.Uil.Vendedor.Views.GSVendedorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Adm.Uil.Vendedor.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
    Width="745"
    MaxHeight="460">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdButton.xaml" />
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            <DataTemplate x:Key="GroupBoxHeaderTemplate">
                <TextBlock
                    FontWeight="Bold"
                    Foreground="Navy"
                    Text="{Binding}" />
            </DataTemplate>
            <Style
                x:Key="LabelPromptStatusForegroundColor"
                BasedOn="{StaticResource LabelPrompt}"
                TargetType="Label" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Width="Auto" FocusManager.FocusedElement="{Binding ElementName=txtCodigoVendedor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox
            Grid.Column="1"
            Width="Auto"
            Header="Vendedor">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label
                    Name="lblCodigoVendedor"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Código"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtCodigo"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="140"
                    nsWpf:LibFocusManager.FocusedPropertyName="Codigo"
                    nsWpf:LibFocusManager.IsFocused="True"
                    InputDataType="Alfanumeric"
                    IsEnabled="{Binding Path=IsEnabledCodigoDeVendedor}"
                    MaxLength="5"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=Codigo, NotifyOnValidationError=True, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=LostFocus}" />
                <Label
                    Name="lblNombreVendedor"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="56"
                    VerticalAlignment="Center"
                    Content="Nombre"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtNombreVendedor"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Width="540"
                    InputDataType="String"
                    IsEnabled="{Binding Path=IsEnabled}"
                    MaxLength="35"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=Nombre, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <Label
                    Name="lblNumeroRIF"
                    Grid.Row="2"
                    Width="110"
                    Height="23"
                    Content="{Binding Path=PromptNumeroRif}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtNumeroRIF"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="140"
                    Height="23"
                    VerticalAlignment="Top"
                    InputDataType="Alfanumeric"
                    IsEnabled="{Binding Path=IsEnabled}"
                    MaxLength="20"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=RIF, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

                <Label
                    Name="lblStatus"
                    Grid.Row="0"
                    Grid.Column="2"
                    Content="Status"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSComboBoxWpf
                    Name="cmbStatus"
                    Grid.Row="0"
                    Grid.Column="3"
                    Width="150"
                    HorizontalAlignment="Right"
                    IsEnabled="{Binding Path=IsEnabled}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Path=ArrayStatusVendedor}"
                    SelectedItem="{Binding Path=StatusVendedor, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource ComboBoxStyle}" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="Auto"
                    Margin="3"
                    HorizontalAlignment="Left"
                    Content="{Binding LabelMontosDeComisiones}"
                    Style="{StaticResource LabelSubTitle}"
                    Visibility="{Binding Path=IsVisibleLabelMontosDeComisiones, Converter={StaticResource booleanToVisibilityConverter}}" />
            </Grid>
        </GroupBox>
        <TabControl
            Name="tbcVendedor"
            Grid.Row="1"
            Grid.Column="1"
            Width="Auto"
            Height="Auto">
            <TabItem
                Name="tbiSeccionGeneral"
                Grid.Row="1"
                Header="Datos del Vendedor">
                <Grid Name="gtSeccionGeneral">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <GroupBox
                        Grid.RowSpan="5"
                        Grid.ColumnSpan="2"
                        Height="240"
                        Header="Datos de Contacto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label
                                Name="lblDireccion"
                                Grid.Row="0"
                                Grid.Column="0"
                                Content="Dirección"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSTextBoxWpf
                                Name="txtDireccion"
                                Grid.Row="0"
                                Grid.RowSpan="4"
                                Grid.Column="1"
                                Width="250"
                                Height="115"
                                InputDataType="String"
                                IsReadOnly="{Binding Path=IsReadOnly}"
                                MaxLength="255"
                                Style="{StaticResource TextBoxInputStyle}"
                                Text="{Binding Path=Direccion, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                            <Label
                                Name="lblCiudad"
                                Grid.Row="4"
                                Grid.Column="0"
                                Content="Ciudad"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSSeekConnection
                                Name="txtCiudad"
                                Grid.Row="4"
                                Grid.Column="1"
                                Width="250"
                                Height="23"
                                Margin="0,3"
                                VerticalAlignment="Top"
                                ConnectionValue="{Binding Path=Ciudad, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                DisplayMemberPath="NombreCiudad"
                                IsEnabled="{Binding Path=IsEnabled}"
                                Model="{Binding Path=ConexionCiudad, Mode=TwoWay}"
                                SearchCommand="{Binding Path=ChooseCiudadCommand}" />
                            <Label
                                Name="lblZonaPostal"
                                Grid.Row="5"
                                Grid.Column="0"
                                Content="Zona Postal"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSTextBoxWpf
                                Name="txtZonaPostal"
                                Grid.Row="5"
                                Grid.Column="1"
                                Width="250"
                                VerticalAlignment="Top"
                                InputDataType="Alfanumeric"
                                IsEnabled="{Binding Path=IsEnabled}"
                                MaxLength="40"
                                Style="{StaticResource TextBoxInputStyle}"
                                Text="{Binding Path=ZonaPostal, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblRutaDeComercializacion2"
                                Grid.Row="6"
                                Grid.Column="0"
                                Content="Ruta de Comercialización"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSSeekConnection
                                Name="txtRutaDeComercializa"
                                Grid.Row="6"
                                Grid.Column="1"
                                Width="250"
                                Height="23"
                                Margin="0,3,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                ConnectionValue="{Binding Path=RutaDeComercializacion, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                DisplayMemberPath="Descripcion"
                                IsEnabled="{Binding Path=IsEnabled}"
                                Model="{Binding Path=ConexionRutaDeComercializacion, Mode=TwoWay}"
                                SearchCommand="{Binding Path=ChooseRutaDeComercializacionCommand}" />
                            <Label
                                Name="lblTelefono"
                                Grid.Row="0"
                                Grid.Column="2"
                                Content="Teléfono"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSTextBoxWpf
                                Name="txtTelefono"
                                Grid.Row="0"
                                Grid.Column="3"
                                Width="245"
                                InputDataType="Alfanumeric"
                                IsEnabled="{Binding Path=IsEnabled}"
                                MaxLength="40"
                                Style="{StaticResource TextBoxInputStyle}"
                                Text="{Binding Path=Telefono, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblFax"
                                Grid.Row="1"
                                Grid.Column="2"
                                Content="Nº Fax"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSTextBoxWpf
                                Name="txtFax"
                                Grid.Row="1"
                                Grid.Column="3"
                                Width="245"
                                InputDataType="Alfanumeric"
                                IsEnabled="{Binding Path=IsEnabled}"
                                MaxLength="25"
                                Style="{StaticResource TextBoxInputStyle}"
                                Text="{Binding Path=Fax, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblEmail"
                                Grid.Row="2"
                                Grid.Column="2"
                                Content="E-mail"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSTextBoxWpf
                                Name="txtEmail"
                                Grid.Row="2"
                                Grid.Column="3"
                                Width="245"
                                InputDataType="String"
                                InvalidCharacters="&quot;|°¬!#$%&amp;/()=?'¡¿¨,:*+~&lt;&gt;^''{}"
                                IsEnabled="{Binding Path=IsEnabled}"
                                MaxLength="100"
                                Style="{StaticResource TextBoxInputStyle}"
                                Text="{Binding Path=Email, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblNotas"
                                Grid.Row="3"
                                Grid.Column="2"
                                Content="Notas"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSTextBoxWpf
                                Name="txtNotas"
                                Grid.Row="3"
                                Grid.RowSpan="3"
                                Grid.Column="3"
                                Width="245"
                                Height="85"
                                VerticalAlignment="Top"
                                BorderThickness="1"
                                InputDataType="String"
                                InvalidCharacters="&quot;|°¬!#$%&amp;/()=?'¡¿¨,:*+~&lt;&gt;^''{}"
                                IsEnabled="{Binding Path=IsEnabled}"
                                MaxLength="255"
                                Style="{StaticResource TextBoxInputStyle}"
                                Text="{Binding Path=Notas, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem
                Name="tbiAsignacionDeComisiones"
                Grid.Row="1"
                Header="Asignación de Comisiones"
                IsEnabled="{Binding Path=IsEnabledAsignacionDeComisiones}"
                Visibility="{Binding Path=IsVisibleAsignacionDeComisiones, Converter={StaticResource booleanToVisibilityConverter}}">
                <Grid Name="gtAsignacionDeComisiones" Height="Auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!--#region Comisiones por Ventas-->
                    <Label
                        Name="lblPorVentas"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,1,15,0"
                        HorizontalAlignment="Right"
                        Content="Por Ventas" />
                    <CheckBox
                        Name="chkbxPorVentas"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,1,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsChecked="{Binding Path=UsaComisionPorVenta}"
                        IsEnabled="{Binding Path=IsEnabled}"
                        Style="{StaticResource CheckBoxStyle}" />
                    <GroupBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Height="200"
                        Header="Topes de Ventas"
                        IsEnabled="{Binding Path=IsEnabledDetalleComisionesPorVentas}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label
                                Name="lblComisionPorVentaDesde"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="30,0,0,0"
                                VerticalContentAlignment="Bottom"
                                Content="Desde"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
                                Name="lblComisionPorVentaHasta"
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="30,0,0,0"
                                VerticalContentAlignment="Bottom"
                                Content="Hasta"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
                                Name="lblPorcentajeDeComisionPorVenta"
                                Grid.Row="0"
                                Grid.Column="3"
                                Margin="19,0,0,0"
                                VerticalContentAlignment="Bottom"
                                Content="%"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
                                Name="lblComisionPorVentaNivel1"
                                Grid.Row="1"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Nivel 1"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtTopeInicialVenta1"
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="100"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=TopeInicialVenta1, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtTopeFinalVenta1"
                                Grid.Row="1"
                                Grid.Column="2"
                                Width="100"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=TopeFinalVenta1, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtPorcentajeVentas1"
                                Grid.Row="1"
                                Grid.Column="3"
                                Width="50"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=PorcentajeVentas1, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblComisionPorVentaNivel2"
                                Grid.Row="2"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Nivel 2"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
                                Name="txtTopeInicialVenta2"
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="100"
                                Height="25"
                                HorizontalContentAlignment="Right"
                                BorderBrush="LightGray"
                                BorderThickness="1,1,1,1"
                                Content="{Binding Path=TopeInicialVenta2, Mode=OneWay}"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtTopeFinalVenta2"
                                Grid.Row="2"
                                Grid.Column="2"
                                Width="100"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=TopeFinalVenta2, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtPorcentajeVentas2"
                                Grid.Row="2"
                                Grid.Column="3"
                                Width="50"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=PorcentajeVentas2, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblComisionPorVentaNivel3"
                                Grid.Row="3"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Nivel 3"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
                                Name="txtTopeInicialVenta3"
                                Grid.Row="3"
                                Grid.Column="1"
                                Width="100"
                                Height="25"
                                HorizontalContentAlignment="Right"
                                BorderBrush="LightGray"
                                BorderThickness="1,1,1,1"
                                Content="{Binding Path=TopeInicialVenta3, Mode=OneWay}"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtTopeFinalVenta3"
                                Grid.Row="3"
                                Grid.Column="2"
                                Width="100"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=TopeFinalVenta3, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtPorcentajeVentas3"
                                Grid.Row="3"
                                Grid.Column="3"
                                Width="50"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=PorcentajeVentas3, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblComisionPorVentaNivel4"
                                Grid.Row="4"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Nivel 4"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
                                Name="txtTopeInicialVenta4"
                                Grid.Row="4"
                                Grid.Column="1"
                                Width="100"
                                Height="25"
                                HorizontalContentAlignment="Right"
                                BorderBrush="LightGray"
                                BorderThickness="1,1,1,1"
                                Content="{Binding Path=TopeInicialVenta4, Mode=OneWay}"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtTopeFinalVenta4"
                                Grid.Row="4"
                                Grid.Column="2"
                                Width="100"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=TopeFinalVenta4, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtPorcentajeVentas4"
                                Grid.Row="4"
                                Grid.Column="3"
                                Width="50"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=PorcentajeVentas4, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <Label
                                Name="lblComisionPorVentaNivel5"
                                Grid.Row="5"
                                Grid.Column="0"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Content="Nivel 5"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
                                Name="lblVentasMayoresA"
                                Grid.Row="5"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Content="Mayores a"
                                Style="{StaticResource LabelPrompt}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtTopeFinalVenta5"
                                Grid.Row="5"
                                Grid.Column="2"
                                Width="100"
                                InputDataType="UDecimal"
                                IsEnabled="False"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=TopeFinalVenta5, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <nsWpfControls:GSNumericBoxWpf
                                Name="txtPorcentajeVentas5"
                                Grid.Row="5"
                                Grid.Column="3"
                                Width="50"
                                InputDataType="UDecimal"
                                MaxLength="10"
                                Style="{StaticResource TextBoxInputStyle}"
                                Value="{Binding Path=PorcentajeVentas5, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </GroupBox>
                    <!--#endregion Comisiones por Ventas-->
                    <!--#region Comisiones por Cobranza-->
                    <Label
                        Name="lblPorCobranza"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,1,15,0"
                        HorizontalAlignment="Right"
                        Content="Por Cobranza" />
                    <CheckBox
                        Name="chkPorCobranza"
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,1,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        IsChecked="{Binding Path=UsaComisionPorCobranza}"
                        IsEnabled="{Binding Path=IsEnabled}"
                        Style="{StaticResource CheckBoxStyle}" />
                    <GroupBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="200"
                        Header="Topes de Cobranza"
                        IsEnabled="{Binding Path=IsEnabledDetalleComisionesPorCobranzas}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label
                                Name="lblComisionPorCobranzaDesde"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="30,0,0,0"
                                VerticalContentAlignment="Bottom"
                                Content="Desde"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
                                Name="lblComisionPorCobranzaHasta"
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="30,0,0,0"
                                VerticalContentAlignment="Bottom"
                                Content="Hasta"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
                                Name="lblPorcentajeDeComisionPorCobranza"
                                Grid.Row="0"
                                Grid.Column="3"
                                Margin="19,0,0,0"
                                VerticalContentAlignment="Bottom"
                                Content="%"
                                Style="{StaticResource LabelPrompt}" />
                            <Label
