                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Total Gastos"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSNumericBoxWpf
                        Name="txtOtrosGastos"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="120"
                        BorderThickness="1"
                        InputDataType="UDecimal"
                        IsEnabled="False"
                        MaxLength="28"
                        Style="{StaticResource TextBoxInputStyle}"
                        Value="{Binding Path=TotalOtrosGastos, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Name="lblTotalRenglones"
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Total Renglones"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSNumericBoxWpf
                        Name="txtTotalRenglones"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="120"
                        BorderThickness="1"
                        InputDataType="UDecimal"
                        IsEnabled="False"
                        MaxLength="28"
                        Style="{StaticResource TextBoxInputStyle}"
                        Value="{Binding Path=TotalRenglones, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="140"
                        Height="2"
                        HorizontalAlignment="Left"
                        Background="Blue" />
                    <Label
                        Name="lblTotalCompra"
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="Total Compra"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSNumericBoxWpf
                        Name="txtTotalCompra"
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="120"
                        BorderThickness="1"
                        InputDataType="UDecimal"
                        IsEnabled="False"
                        MaxLength="28"
                        Style="{StaticResource TextBoxInputStyle}"
                        Value="{Binding Path=TotalCompra, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Name="lblTotalDiferenciaDistribucion"
                        Grid.Row="4"
                        Grid.Column="0"
                        Content="Diferencia Distribución"
                        Style="{StaticResource LabelPrompt}"
                        Visibility="{Binding Path=IsVisibleDiferenciaDistribucion, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <nsWpfControls:GSNumericBoxWpf
                        Name="txtTotalDistribucion"
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="120"
                        BorderThickness="1"
                        InputDataType="Decimal"
                        IsEnabled="False"
                        MaxLength="28"
                        Style="{StaticResource TextBoxInputStyle}"
                        Visibility="{Binding Path=IsVisibleDiferenciaDistribucion, Converter={StaticResource booleanToVisibilityConverter}}"
                        Value="{Binding Path=DifereciaDistribucion, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Name="lblComentarios"
                        Grid.Row="5"
                        Grid.Column="0"
                        Content="Comentarios"
                        Style="{StaticResource LabelPrompt}" />

                    <nsWpfControls:GSTextAreaWpf
                        Name="txtComentarios"
                        Grid.Row="6"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Width="240"
                        Height="110"
                        BorderThickness="1"
                        IsReadOnly="{Binding Path=IsReadOnly}"
                        MaxLength="255"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=Comentarios, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        VerticalScrollBarVisibility="Auto" />

                </Grid>
            </GroupBox>
        </Grid>


















