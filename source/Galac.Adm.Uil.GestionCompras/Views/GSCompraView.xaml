                                SelectedItem="{Binding Path=DetailCompraDetalleGasto.SelectedItem, Mode=OneWayToSource}"
                                Style="{StaticResource GSDataGridStyle}"
                                UpdateSourceTrigger="PropertyChanged"
                                UseComboBoxYesNoForBooleans="False"
                                VerticalScrollBarVisibility="Auto" />
