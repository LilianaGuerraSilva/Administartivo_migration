        <nsWpfControls:GSComboBoxWpf Name="cmbTipoDePersona" DisplayMemberPath="Text" DbMemberPath="Value" Height="23" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,12,0,0" ToolTip="Tipo De Persona" SelectedIndex="0" DbColumnName="Adm.Gv_TablaRetencion_B1.TipoDePersona" BorderThickness="1" TabIndex = "0">
            <nsWpfControls:LibGSCmbGenericItem Text="Todos (as)" Value=""/>
