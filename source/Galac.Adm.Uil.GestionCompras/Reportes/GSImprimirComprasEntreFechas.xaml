<UserControl x:Class="Galac.Adm.Uil.GestionCompras.Reportes.GSImprimirComprasEntreFechas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nsARRpt="clr-namespace:LibGalac.Aos.ARRpt;assembly=LibGalac.Aos.ARRpt"
             xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Name="lblFechaInicial" Content="Fecha Inicial" Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSDatePickerWpf Grid.Column="1" Grid.Row="0" Name="txtFechaInicial" VerticalContentAlignment="Center" HorizontalAlignment="Left" 
                                       Width="120" IsEnabled="{Binding Path=IsEnabled}"
                                       SelectedDate="{Binding Path=FechaInicial,  NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="5" Grid.Column="0" Name="lblMonedaEnElInforme" Content="Moneda en el Informe" Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSComboBoxWpf Grid.Column="1" Grid.Row="5" Name="cmbMonedaEnElInforme" VerticalContentAlignment="Center" HorizontalAlignment="Left" 
                                       Width="130" IsEnabled="{Binding Path=IsEnabled}"
                                       IsSynchronizedWithCurrentItem="True"
                                       ItemsSource="{Binding Path=ArrayMonedaParaImpresion}"
                                       SelectedItem="{Binding Path=MonedaParaImpresion, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="6" Grid.Column="0" Name="lblOriginal" Content="Original" Style="{StaticResource LabelPrompt}" Visibility="{Binding Path=IsVisible, Converter={StaticResource booleanToVisibilityConverter}}"/>
        <RadioButton Grid.Row="6" Grid.Column="1" Name="rdOriginal" IsChecked="{Binding Path=Original}" HorizontalAlignment="Left" VerticalAlignment="Center" 
                     Visibility="{Binding Path=IsVisible, Converter={StaticResource booleanToVisibilityConverter}}"/>

        <Label Grid.Row="7" Grid.Column="0" Name="lblDelDia" Content="Del Dia" Style="{StaticResource LabelPrompt}" Visibility="{Binding Path=IsVisible,  Converter={StaticResource booleanToVisibilityConverter}}" />
        <RadioButton Grid.Row="7" Grid.Column="1" Name="rdDelDia" IsChecked="{Binding Path=DelDia}" HorizontalAlignment="Left" VerticalAlignment="Center" 
                     Visibility="{Binding Path=IsVisible, Converter={StaticResource booleanToVisibilityConverter}}"/>



        <Label Grid.Row="1" Grid.Column="0" Name="lblFechaFinal" Content="Fecha Final"  Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSDatePickerWpf Grid.Column="1" Grid.Row="1" Name="txtFechaFinal" VerticalContentAlignment="Center" HorizontalAlignment="Left"
                                       Width="120" IsEnabled="{Binding Path=IsEnabled}"
                                       SelectedDate="{Binding Path=FechaFinal,  NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Grid.Row="2" Grid.Column="0" Name="lblImprimirRenglones" Content="Imprimir Renglones" Style="{StaticResource LabelPrompt}" />
        <CheckBox Grid.Row="2" Grid.Column="1" Name="chkImprimirRenglones" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=ImprimirRenglones}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>
        <Label Grid.Row="3" Grid.Column="0" Name="lblImprimirTotales" Content="Imprimir Totales" Style="{StaticResource LabelPrompt}" />
        <CheckBox Grid.Row="3" Grid.Column="1" Name="chkImprimirTotales" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=ImprimirTotales}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>
        <Label Grid.Row="4" Grid.Column="0" Name="lblMostrarComprasAnuladas" Content="Mostrar Compras Anuladas " Style="{StaticResource LabelPrompt}" />
        <CheckBox Grid.Row="4" Grid.Column="1" Name="chkMostrarComprasAnuladas" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=MostrarComprasAnuladas}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>

        <!--
        <Label Grid.Row="0" Grid.Column="0" Content="Cantidad a Imprimir" Style="{StaticResource LabelPrompt}" />
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbCantidadAImprimir" Style="{StaticResource ComboBoxStyle}"  Width="150"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding Path=ECantidadAImprimir}"
                SelectedItem="{Binding Path=CantidadAImprimir, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <nsWpfControls:GSSeekConnection Grid.Row="1" Grid.Column="1" Name="txtSiglasPrograma" Height="23" Margin="3" Width="150" HorizontalAlignment="Left"
                                        DisplayMemberPath="Siglas"
                                        Model="{Binding Path=Programa, Mode=TwoWay}"
                                        ConnectionValue="{Binding Path=SiglasDelPrograma, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                        SearchCommand="{Binding Path=ChooseProgramaCommand}"
                                        Visibility="{Binding Path=ShowSiglasDelPrograma, Converter={StaticResource BooleanToCollapsedVisibility}}" />
-->
    </Grid>
</UserControl>
