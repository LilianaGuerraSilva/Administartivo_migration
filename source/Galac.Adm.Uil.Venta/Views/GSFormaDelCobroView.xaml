<UserControl
    x:Class="Galac.Adm.Uil.Venta.Views.GSFormaDelCobroView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Adm.Uil.Venta.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid FocusManager.FocusedElement="{Binding ElementName=txtCodigo}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            Name="lblCodigo"
            Grid.Column="0"
            Width="115"
            Height="26"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            Content="Código"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSTextBoxWpf
            Name="txtCodigo"
            Grid.Row="0"
            Grid.Column="1"
            Width="120"
            Margin="3,3,3,3"
            nsWpf:LibFocusManager.FocusedPropertyName="Codigo"
            nsWpf:LibFocusManager.IsFocused="True"
            BorderThickness="1"
            InputDataType="Alfanumeric"
            IsEnabled="{Binding Path=IsEnabledCodigo}"
            MaxLength="5"
            Style="{StaticResource TextBoxInputStyle}"
            Text="{Binding Path=Codigo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Name="lblNombre"
            Grid.Row="1"
            Grid.Column="0"
            Width="115"
            Height="26"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            Content="Nombre"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSTextBoxWpf
            Name="txtNombre"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Margin="3,3,3,3"
            HorizontalAlignment="Stretch"
            BorderThickness="1"
            InputDataType="Alfanumeric"
            IsEnabled="{Binding Path=IsEnabledNombre}"
            MaxLength="50"
            Style="{StaticResource TextBoxInputStyle}"
            Text="{Binding Path=Nombre, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Name="lblTipoDePago"
            Grid.Row="2"
            Grid.Column="0"
            Width="115"
            Height="26"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            Content="Tipo"
            Style="{StaticResource LabelPrompt}" />
        <Label
            Name="lneTipoDePago"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Height="25"
            Margin="3,3,3,3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            BorderThickness="0.2,0.2,0.2,0.2"
            Content="{Binding Path=TipoDePago}"
            Style="{StaticResource LabelCalculatedField}" />
        <Label
            Name="lblCodigoMoneda"
            Grid.Row="2"
            Grid.Column="4"
            Width="115"
            Height="26"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Content="Moneda"
            Style="{StaticResource LabelPrompt}" />
        <Label
            Name="lneCodigoMoneda"
            Grid.Row="2"
            Grid.Column="4"
            Width="70"
            Height="25"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            BorderThickness="0.2,0.2,0.2,0.2"
            Content="{Binding Path=CodigoMoneda}"
            Style="{StaticResource LabelCalculatedField}"
            Visibility="Collapsed" />
        <Label
            Name="lblNombreMoneda"
            Grid.Row="2"
            Grid.Column="5"
            Height="23"
            Margin="3,3,3,3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            BorderThickness="0.2,0.2,0.2,0.2"
            Content="{Binding Path=NombreMoneda}"
            Style="{StaticResource LabelCalculatedField}" />
        <Label
            Name="lblCodigoCuentaBancaria"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="115"
            Height="26"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            Content="Cuenta Bancaria"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSSeekConnection
            Name="txtCodigoCuentaBancaria"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Width="191"
            Margin="3,3,0,3"
            HorizontalAlignment="Left"
            ConnectionValue="{Binding Path=CodigoCuentaBancaria, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
            DisplayMemberPath="Codigo"
            IsEnabled="{Binding Path=IsEnabledCuenta}"
            Model="{Binding Path=ConexionCodigoCuentaBancaria, Mode=TwoWay}"
            SearchCommand="{Binding Path=ChooseCodigoCuentaBancariaCommand}" />
        <Label
            Name="lblNombreCuentaBancaria"
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="3"
            Height="25"
            Margin="3,3,3,3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            BorderThickness="0.2,0.2,0.2,0.2"
            Content="{Binding Path=NombreCuentaBancaria}"
            Style="{StaticResource LabelCalculatedField}" />
        <Label
            Name="lblCodigoTheFactory"
            Grid.Column="4"
            Width="115"
            Height="26"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Código The Factory"
            Style="{StaticResource LabelPrompt}" />
        <Label
            Name="lneCodigoTheFactory"
            Grid.Column="5"
            Width="70"
            Height="25"
            Margin="3,3,3,3"
            VerticalAlignment="Center"
            BorderThickness="0.2,0.2,0.2,0.2"
            Content="{Binding Path=CodigoTheFactory}"
            Style="{StaticResource LabelCalculatedField}" />
        <Label
            Name="lblOrigen"
            Grid.Column="2"
            Width="46"
            Height="26"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Content="Origen"
            Style="{StaticResource LabelPrompt}" />
        <Label
            Name="lneOrigen"
            Grid.Column="3"
            Width="60"
            Height="25"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            BorderThickness="0.2,0.2,0.2,0.2"
            Content="{Binding Path=Origen}"
            Style="{StaticResource LabelCalculatedField}" />
    </Grid>
</UserControl>
