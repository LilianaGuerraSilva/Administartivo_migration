<UserControl
    x:Class="Galac.Adm.Uil.Venta.Views.GSCajaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Adm.Uil.Venta.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            <DataTemplate x:Key="GroupBoxHeaderTemplate">
                <TextBlock
                    FontWeight="Bold"
                    Foreground="Navy"
                    Text="{Binding}" />
            </DataTemplate>
            <Style
                x:Key="LabelPromptStatusForegroundColor"
                BasedOn="{StaticResource LabelPrompt}"
                TargetType="Label">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ForeGroundRif}" Value="0">
                        <Setter Property="Foreground" Value="DarkGreen" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ForeGroundRif}" Value="1">
                        <Setter Property="Foreground" Value="DarkRed" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ForeGroundRif}" Value="2">
                        <Setter Property="Foreground" Value="Black" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Name="Main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TabControl
            Name="TabMain"
            Grid.Row="0"
            Grid.Column="0"
            Width="554">
            <TabItem Name="tabCajaRegistradora" Header="Caja Registradora">
                <Grid Name="Caja">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label
                        Name="lblNombreCaja"
                        Grid.Column="0"
                        Content="Nombre Caja"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSTextBoxWpf
                        Name="txtNombreCaja"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="120"
                        nsWpf:LibFocusManager.FocusedPropertyName="NombreCaja"
                        nsWpf:LibFocusManager.IsFocused="True"
                        BorderThickness="1"
                        InputDataType="Alfanumeric"
                        IsEnabled="{Binding Path=IsEnabledForCajaGenerica}"
                        MaxLength="60"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=NombreCaja, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Name="lblUsaGaveta"
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Usa Gaveta"
                        Style="{StaticResource LabelPrompt}" />
                    <CheckBox
                        Name="chkUsaGaveta"
                        Grid.Row="1"
                        Grid.Column="1"
                        IsChecked="{Binding Path=UsaGaveta}"
                        Style="{StaticResource CheckBoxStyle}" />
                    <Label
                        Name="lblPuerto"
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="Puerto"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSComboBoxWpf
                        Name="cmbPuerto"
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="120"
                        IsEnabled="{Binding Path=IsEnabledUsaGaveta}"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding Path=ListarPuertos}"
                        SelectedItem="{Binding Path=Puerto, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ComboBoxStyle}" />
                    <Label
                        Name="lblComando"
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="Comando"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSTextBoxWpf
                        Name="txtComando"
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="120"
                        BorderThickness="1"
                        InputDataType="String"
                        IsEnabled="{Binding Path=IsEnabledUsaGaveta}"
                        MaxLength="10"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=Comando, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    <Label
                        Name="lblUsaAccesoRapido"
                        Grid.Row="4"
                        Grid.Column="0"
                        Content="Usa tecla de acceso rápido para Abrir Gaveta"
                        Style="{StaticResource LabelPrompt}" />
                    <CheckBox
                        Name="chkUsaAccesoRapido"
                        Grid.Row="4"
                        Grid.Column="1"
                        IsChecked="{Binding Path=UsaAccesoRapido}"
                        IsEnabled="{Binding Path=IsEnabledUsaGaveta}"
                        Style="{StaticResource CheckBoxStyle}" />
                    <Label
                        Name="lblPermitirAbrirSinSupervisor"
                        Grid.Row="5"
                        Grid.Column="0"
                        Content="Permitir Abrir Sin Supervisor"
                        Style="{StaticResource LabelPrompt}"
                        Visibility="Visible" />
                    <CheckBox
                        Name="chkPermitirAbrirSinSupervisor"
                        Grid.Row="5"
                        Grid.Column="1"
                        IsChecked="{Binding Path=PermitirAbrirSinSupervisor}"
                        IsEnabled="{Binding Path=IsEnabledUsaGaveta}"
                        Style="{StaticResource CheckBoxStyle}" />
                </Grid>
            </TabItem>
            <TabItem
                Name="tabMaquinaFiscal"
                Header="Impresora Fiscal"
                IsEnabled="{Binding Path=UsaMaquinaFiscal}"
                Visibility="{Binding Path=IsVisibleParaVenezuela, Converter={StaticResource booleanToVisibilityConverter}}">
                <Grid Name="MaquinaFiscal">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label
                        Name="lblFamiliaDeMaquinaFiscal"
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="Fabricante"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSComboBoxWpf
                        Name="cmbFamiliaDeMaquinaFiscal"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="150"
                        VerticalAlignment="Top"
                        IsEnabled="{Binding Path=IsEnabled}"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding Path=ArrayFamiliaImpresoraFiscal}"
                        SelectedItem="{Binding Path=FamiliaImpresoraFiscal, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ComboBoxStyle}" />
                    <Label
                        Name="lblModeloDeMaquinaFiscal"
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Modelo"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSComboBoxWpf
                        Name="cmbModeloDeMaquinaFiscal"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="150"
                        IsEnabled="{Binding Path=IsEnabled}"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding Path=ListarMaquinaFiscal}"
                        SelectedItem="{Binding Path=ModeloDeMaquinaFiscal, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ComboBoxStyle}" />
                    <Label
                        Name="lblTipoConexion"
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="Tipo de Conexión"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSComboBoxWpf
                        Name="cmbTipoConexion"
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="150"
                        IsEnabled="{Binding Path=IsEnabled}"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding Path=ListarTipoConexion}"
                        SelectedItem="{Binding Path=TipoConexion, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ComboBoxStyle}" />
                    <Label
                        Name="lblPuertoMaquinaFiscal"
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="Puerto"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSComboBoxWpf
                        Name="cmbPuertoMaquinaFiscal"
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="150"
                        IsEnabled="{Binding Path=IsEnabledPuertoSerial}"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding Path=ListarPuertosImpFiscal}"
                        SelectedItem="{Binding Path=PuertoMaquinaFiscal, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ComboBoxStyle}" />
                    <Label
                        Name="lblAbrirGavetaDeDinero"
                        Grid.Row="4"
                        Grid.Column="0"
                        Content="Abrir Gaveta de dinero"
                        Style="{StaticResource LabelPrompt}" />
                    <CheckBox
                        Name="chkAbrirGavetaDeDinero"
                        Grid.Row="4"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        IsChecked="{Binding Path=AbrirGavetaDeDinero}"
                        IsEnabled="{Binding Path=IsEnabled}"
                        Style="{StaticResource CheckBoxStyle}" />
                    <Label
                        Name="lblSerialDeMaquinaFiscal"
                        Grid.Row="5"
                        Grid.Column="0"
                        Content="Serial"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSTextBoxWpf
                        Name="txtSerialDeMaquinaFiscal"
                        Grid.Row="5"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        BorderThickness="1"
                        InputDataType="Alfanumeric"
                        IsEnabled="{Binding Path=IsEnabled}"
                        IsReadOnly="True"
                        MaxLength="15"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=SerialDeMaquinaFiscal, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                    <Label
                        Name="lblUltimoCompFiscal"
                        Grid.Row="6"
                        Grid.Column="0"
                        Content="Último Núm. Comp Fiscal"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSTextBoxWpf
                        Name="txUltimoNumeroCompFiscal"
                        Grid.Row="6"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        BorderThickness="1"
                        InputDataType="Alfanumeric"
                        IsEnabled="{Binding Path=IsEnabled}"
                        IsReadOnly="True"
                        MaxLength="15"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=UltimoNumeroCompFiscal, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                    <Label
                        Name="lblUltimoNumeroNotaCredito"
                        Grid.Row="7"
                        Grid.Column="0"
                        Content="Último Núm. Nota de Crédito"
                        Style="{StaticResource LabelPrompt}" />
                    <nsWpfControls:GSTextBoxWpf
                        Name="txUltimoNumeroNCFiscal"
                        Grid.Row="7"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        BorderThickness="1"
                        InputDataType="Alfanumeric"
                        IsEnabled="{Binding Path=IsEnabled}"
                        IsReadOnly="True"
                        MaxLength="15"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=UltimoNumeroNCFiscal, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        TextAlignment="Right" />
                    <Label
                        Name="lblRegistroDeRetornoEnTxt"
                        Grid.Row="8"
                        Grid.Column="0"
                        Content="Registro de Retorno en txt"
                        Style="{StaticResource LabelPrompt}"
                        Visibility="{Binding Path=IsVisibleRegistroDeRetornoEnTxt, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <CheckBox
                        Name="chkRegistroDeRetornoEnTxt"
                        Grid.Row="8"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        IsChecked="{Binding Path=RegistroDeRetornoEnTxt}"
                        IsEnabled="{Binding Path=IsEnabled}"
                        Style="{StaticResource CheckBoxStyle}"
                        Visibility="{Binding Path=IsVisibleRegistroDeRetornoEnTxt, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <Label
                        Name="lblMotivoEliminacionOModificacion"
                        Grid.Row="9"
                        Grid.Column="0"
                        Content="Motivo del cambio"
                        Style="{StaticResource LabelPrompt}"
                        Visibility="{Binding Path=IsVisibleMotivoEliminacionOModificacion, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <nsWpfControls:GSTextAreaWpf
                        Name="txtMotivoEliminacionOModificacion"
                        Grid.Row="9"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Width="365"
                        Height="60"
                        Margin="3,3,10,3"
                        HorizontalAlignment="Stretch"
                        BorderThickness="1"
                        MaxLength="255"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=MotivoEliminacionOModificacion, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        VerticalScrollBarVisibility="Auto"
                        Visibility="{Binding Path=IsVisibleMotivoEliminacionOModificacion, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <Label
                        Name="lblPermitirDescripcionDelArticuloExtendida"
                        Grid.Row="0"
                        Grid.Column="2"
                        Content="Permitir descripción extendida del artículo"
                        Style="{StaticResource LabelPrompt}"
                        Visibility="{Binding Path=IsVisibleParaEpson, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <CheckBox
                        Name="chkPermitirDescripcionDelArticuloExtendida"
                        Grid.Row="0"
                        Grid.Column="3"
                        IsChecked="{Binding Path=PermitirDescripcionDelArticuloExtendida}"
                        IsEnabled="{Binding Path=IsEnabled}"
                        Style="{StaticResource CheckBoxStyle}"
                        Visibility="{Binding Path=IsVisibleParaEpson, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <Label
                        Name="lblPermitirNombreDelClienteExtendido"
                        Grid.Row="1"
                        Grid.Column="2"
                        Content="Permitir nombre extendido del cliente"
                        Style="{StaticResource LabelPrompt}"
                        Visibility="{Binding Path=IsVisibleParaEpson, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <CheckBox
                        Name="chkPermitirNombreDelClienteExtendido"
                        Grid.Row="1"
                        Grid.Column="3"
                        HorizontalAlignment="Left"
                        IsChecked="{Binding Path=PermitirNombreDelClienteExtendido}"
                        IsEnabled="{Binding Path=IsEnabled}"
                        Style="{StaticResource CheckBoxStyle}"
                        Visibility="{Binding Path=IsVisibleParaEpson, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <Label
                        Name="lblIpParaConexion"
                        Grid.Row="2"
                        Grid.Column="2"
                        Content="Ip para Conexión"
                        Style="{StaticResource LabelPrompt}"
                        Visibility="{Binding Path=IsVisibleParaQPrint, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <nsWpfControls:GSTextBoxWpf
                        Name="txtIpParaConexion"
                        Grid.Row="2"
                        Grid.Column="3"
                        Width="120"
                        BorderThickness="1"
                        InputDataType="Alfanumeric"
                        IsEnabled="{Binding Path=IsEnabled}"
                        MaxLength="15"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=IpParaConexion, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding Path=IsVisibleParaQPrint, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <Label
                        Name="lblMascaraSubred"
                        Grid.Row="3"
                        Grid.Column="2"
                        Content="Máscara de subred"
                        Style="{StaticResource LabelPrompt}"
                        Visibility="{Binding Path=IsVisibleParaQPrint, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <nsWpfControls:GSTextBoxWpf
                        Name="txtMascaraSubred"
                        Grid.Row="3"
                        Grid.Column="3"
                        Width="120"
                        BorderThickness="1"
                        InputDataType="Alfanumeric"
                        IsEnabled="{Binding Path=IsEnabled}"
                        MaxLength="15"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=MascaraSubred, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding Path=IsVisibleParaQPrint, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <Label
                        Name="lblGateway"
                        Grid.Row="4"
                        Grid.Column="2"
                        Content="Gateway"
                        Style="{StaticResource LabelPrompt}"
                        Visibility="{Binding Path=IsVisibleParaQPrint, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <nsWpfControls:GSTextBoxWpf
                        Name="txtGateway"
                        Grid.Row="4"
                        Grid.Column="3"
                        Width="120"
                        BorderThickness="1"
                        InputDataType="Alfanumeric"
                        IsEnabled="{Binding Path=IsEnabled}"
                        MaxLength="15"
                        Style="{StaticResource TextBoxInputStyle}"
                        Text="{Binding Path=Gateway, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                        Visibility="{Binding Path=IsVisibleParaQPrint, Converter={StaticResource booleanToVisibilityConverter}}" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
