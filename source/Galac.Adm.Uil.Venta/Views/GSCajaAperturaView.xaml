<UserControl
    x:Class="Galac.Adm.Uil.Venta.Views.GSCajaAperturaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Adm.Uil.Venta.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            <Style TargetType="{x:Type DatePickerTextBox}">
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <TextBox x:Name="PART_TextBox" Text="{Binding Path=SelectedDate, StringFormat='dd MMM yyyy', RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Name="Main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            FocusManager.FocusedElement="{Binding ElementName=txtNombreCaja}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label
                Name="lblNombreCaja"
                Grid.Row="0"
                Grid.Column="0"
                Content="Nombre Caja"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSSeekConnection
                Name="txtNombreCaja"
                Grid.Row="0"
                Grid.Column="1"
                Width="295"
                Height="23"
                Margin="16,4,2,4"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Right"
                Background="LightGray"
                ConnectionValue="{Binding Path=NombreCaja, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                DisplayMemberPath="NombreCaja"
                Foreground="Black"
                IsEnabled="{Binding Path=IsEnabled}"
                Model="{Binding Path=ConexionNombreCaja, Mode=TwoWay}"
                SearchCommand="{Binding Path=ChooseNombreCajaCommand}" />
        </Grid>
        <Grid
            Name="Detaills"
            Grid.Row="1"
            Grid.Column="0"
            Visibility="{Binding Path=ShowDetaills, Converter={StaticResource booleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label
                Name="lblNombreDelUsuario"
                Grid.Row="0"
                Grid.Column="0"
                Content="Operador"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSSeekConnection
                Name="txtNombreDelUsuario"
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Height="23"
                Margin="3"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Left"
                Background="LightGray"
                ConnectionValue="{Binding Path=NombreDelUsuario, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                DisplayMemberPath="UserName"
                Foreground="Black"
                IsEnabled="{Binding Path=IsEnabledForInsert}"
                Model="{Binding Path=ConexionNombreDelUsuario, Mode=TwoWay}"
                SearchCommand="{Binding Path=ChooseNombreDelUsuarioCommand}" />
            <Label
                Name="lblMontos"
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Content="Montos"
                Style="{StaticResource LabelPrompt}" />
            <Label
                Name="lblMontoApertura"
                Grid.Row="2"
                Grid.Column="0"
                Content="Apertura"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSNumericBoxWpf
                Name="txtMontoApertura"
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Right"
                BorderThickness="1.5"
                DecimalDigits="2"
                Foreground="Black"
                InputDataType="UDecimal"
                IsEnabled="{Binding Path=IsEnabledForInsert}"
                MaxLength="28"
                Style="{StaticResource TextBoxInputStyle}"
                Value="{Binding Path=MontoApertura, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Name="lblMontoEfectivo"
                Grid.Row="3"
                Grid.Column="0"
                Content="Efectivo"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSNumericBoxWpf
                Name="txtMontoEfectivo"
                Grid.Row="3"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Width="292"
                Foreground="Black"
                InputDataType="UDecimal"
                IsEnabled="False"
                MaxLength="28"
                Style="{StaticResource TextBoxInputStyle}"
                Value="{Binding Path=MontoEfectivo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Name="lblMontoTarjeta"
                Grid.Row="4"
                Grid.Column="0"
                Content="Tarjeta"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSNumericBoxWpf
                Name="txtMontoTarjeta"
                Grid.Row="4"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Width="292"
                Foreground="Black"
                InputDataType="UDecimal"
                IsEnabled="False"
                MaxLength="28"
                Style="{StaticResource TextBoxInputStyle}"
                Value="{Binding Path=MontoTarjeta, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Name="lblMontoCheque"
                Grid.Row="5"
                Grid.Column="0"
                Content="Cheque"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSNumericBoxWpf
                Name="txtMontoCheque"
                Grid.Row="5"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Width="292"
                Foreground="Black"
                InputDataType="UDecimal"
                IsEnabled="False"
                MaxLength="28"
                Style="{StaticResource TextBoxInputStyle}"
                Value="{Binding Path=MontoCheque, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Name="lblMontoDeposito"
                Grid.Row="6"
                Grid.Column="0"
                Content="Monto Deposito"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSNumericBoxWpf
                Name="txtMontoDeposito"
                Grid.Row="6"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Width="292"
                Foreground="Black"
                InputDataType="UDecimal"
                IsEnabled="False"
                MaxLength="28"
                Style="{StaticResource TextBoxInputStyle}"
                Value="{Binding Path=MontoDeposito, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Name="lblMontoAnticipo"
                Grid.Row="7"
                Grid.Column="0"
                Content="Monto Anticipo"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSNumericBoxWpf
                Name="txtMontoAnticipo"
                Grid.Row="7"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Width="292"
                Foreground="Black"
                InputDataType="UDecimal"
                IsEnabled="False"
                MaxLength="28"
                Style="{StaticResource TextBoxInputStyle}"
                Value="{Binding Path=MontoAnticipo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            <Line
                Name="linTotal"
                Grid.Row="8"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="5"
                HorizontalAlignment="Stretch"
                Stroke="Black"
                StrokeThickness="2"
                X1="0"
                X2="290"
                Y1="0"
                Y2="0" />
            <Label
                Name="lblMontoCierre"
                Grid.Row="9"
                Grid.Column="0"
                Content="Cierre"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSNumericBoxWpf
                Name="txtMontoCierre"
                Grid.Row="9"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Width="292"
                Background="#FF41719C"
                Foreground="Black"
                InputDataType="UDecimal"
                IsEnabled="False"
                MaxLength="28"
                Style="{StaticResource TextBoxInputStyle}"
                Value="{Binding Path=MontoCierre, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Name="lblFecha"
                Grid.Row="10"
                Grid.Column="0"
                Content="Fecha"
                Style="{StaticResource LabelPrompt}" />
            <Label
                Name="lblHoraApertura"
                Grid.Row="10"
                Grid.Column="1"
                Content="Hora Apertura"
                Style="{StaticResource LabelPrompt}" />
            <Label
                Name="lblHoraCierre"
                Grid.Row="10"
                Grid.Column="2"
                Content="Hora Cierre"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSDatePickerWpf
                Name="dtpFecha"
                Grid.Row="11"
                Grid.Column="0"
                IsEnabled="False"
                SelectedDate="{Binding Path=Fecha}" />
            <Label
                Name="lneHoraApertura"
                Grid.Row="11"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                Background="LightGray"
                Content="{Binding Path=HoraAperturaDt}"
                Foreground="Black"
                Opacity="0.25"
                Style="{StaticResource LabelCalculatedField}" />
            <Label
                Name="lneHoraCierre"
                Grid.Row="11"
                Grid.Column="2"
                Width="80"
                Margin="6,3,0,0"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                Background="LightGray"
                Content="{Binding Path=HoraCierreDt}"
                Foreground="Black"
                Opacity="0.25"
                Style="{StaticResource LabelCalculatedField}" />
        </Grid>
    </Grid>
</UserControl>
