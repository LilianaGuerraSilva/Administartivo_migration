<UserControl
    x:Class="Galac.Saw.Uil.SttDef.Views.GSCxPComprasRetISLRView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Saw.Uil.SttDef.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/Galac.Saw.Uil.SttDef;component/Themes/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid FocusManager.FocusedElement="{Binding ElementName=chkUsaRetencion}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Header=""
            Style="{StaticResource GroupBoxStyle}" Visibility="{Binding Path=IsVisibleRetencionISLR, Converter={StaticResource booleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <Label
                    Name="lblUsaRetencion"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Usa Módulo de Retenciones............................................................................"
                    IsEnabled="{Binding Path=IsEnabledUsaRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkUsaRetencion"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=UsaRetencion}"
                    IsEnabled="{Binding Path=IsEnabledUsaRetencion}"
                    Style="{StaticResource CheckBoxStyle}" />

                <Label
                    Name="lblNumCopiasComprobanteRetencion"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Número de Copias del Comprobante Retención............................................."
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtNumCopiasComprobanteRetencion"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="30"
                    BorderThickness="1"
                    InputDataType="UInteger"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    MaxLength="2"
                    Style="{StaticResource TextBoxInputStyle}"
                    Value="{Binding Path=NumCopiasComprobanteRetencion, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

                <Label
                    Name="lblMesDelCierreFiscal"
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Día / Mes de Cierre Fiscal................................................................................"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtDiaDelCierreFiscal"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="30"
                    BorderThickness="1"
                    InputDataType="Integer"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    MaxLength="11"
                    Style="{StaticResource TextBoxInputStyle}"
                    Value="{Binding Path=DiaDelCierreFiscal, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtMesDelCierreFiscal"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="30"
                    Margin="35,0,0,0"
                    BorderThickness="1"
                    InputDataType="Month"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    MaxLength="11"
                    Style="{StaticResource TextBoxInputStyle}"
                    Value="{Binding Path=MesDelCierreFiscal, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <Label
                    Name="lblTomarEnCuentaRetencionesCeroParaArcvyRa"
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Tomar en Cuenta Retenciones en Cero (0) en la Relación Anual y los ARCV"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkTomarEnCuentaRetencionesCeroParaArcvyRa"
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=TomarEnCuentaRetencionesCeroParaArcvyRa}"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource CheckBoxStyle}" />
                <Label
                    Name="lblEnDondeRetenerISLR"
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="Dónde se Efectua la Retención ISLR..............................................................."
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSComboBoxWpf
                    Name="cmbEnDondeRetenerISLR"
                    Grid.Row="4"
                    Grid.Column="1"
                    Width="150"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Path=ArrayDondeSeEfectuaLaRetencionISLR}"
                    SelectedItem="{Binding Path=EnDondeRetenerISLR, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource ComboBoxStyle}" />
                <Label
                    Name="lblNombrePlantillaComprobanteDeRetISRL"
                    Grid.Row="5"
                    Grid.Column="0"
                    Content="Nombre Plantilla Comprobante de Ret ISRL .................................................."
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtNombrePlantillaComprobanteDeRetISRL"
                    Grid.Row="5"
                    Grid.Column="1"
                    Width="315"
                    BorderThickness="1"
                    InputDataType="Alfanumeric"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    MaxLength="60"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=NombrePlantillaComprobanteDeRetISRL, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Name="btnTemplate"
                    Grid.Row="5"
                    Grid.Column="1"
                    Width="30"
                    Height="23"
                    Margin="320,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{Binding Path=ChooseTemplateCommand}"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}">
                    ...
                </Button>
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Grid.Column="0"
            Header="Representante Legal"
            Style="{StaticResource GroupBoxStyle}"  Visibility="{Binding Path=IsVisibleRepresentanteLegal, Converter={StaticResource booleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>


                <Label
                    Name="lblNumeroRifr"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="RIF......................................"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtNumeroRifr"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="120"
                    nsWpf:LibFocusManager.FocusedPropertyName="NumeroRifr"
                    nsWpf:LibFocusManager.IsFocused="True"
                    BorderThickness="1"
                    InputDataType="Alfanumeric"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    MaxLength="15"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=NumeroRifr, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

                <Label
                    Name="lblNombreYapellidor"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Nombre y Apellido..............."
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtNombreYapellidor"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="250"
                    BorderThickness="1"
                    InputDataType="Alfanumeric"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    IsReadOnly="{Binding Path=IsReadOnly}"
                    MaxLength="100"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=NombreYapellidor, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    VerticalScrollBarVisibility="Auto" />

                <Label
                    Name="lblTelefonor"
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Teléfono (Código / Número)"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtCodTelfr"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="40"
                    BorderThickness="1"
                    InputDataType="Digit"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    MaxLength="4"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=CodTelfr, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtTelefonor"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="100"
                    Margin="45,0,0,0"
                    BorderThickness="1"
                    InputDataType="Digit"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    MaxLength="7"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=Telefonor, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />


                <Label
                    Name="lblDireccionr"
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Dirección............................."
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtDireccionr"
                    Grid.Row="3"
                    Grid.Column="1"
                    Width="250"
                    Height="80"
                    BorderThickness="1"
                    InputDataType="Alfanumeric"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    IsReadOnly="{Binding Path=IsReadOnly}"
                    MaxLength="100"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=Direccionr, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    VerticalScrollBarVisibility="Auto" />

                <Label
                    Name="lblCiudadRepLegal"
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="Ciudad................................."
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />

                <nsWpfControls:GSSeekConnection
                    Name="txtCiudadRepLegal"
                    Grid.Row="4"
                    Grid.Column="1"
                    Width="250"
                    Height="23"
                    Margin="3"
                    HorizontalAlignment="Left"
                    ConnectionValue="{Binding Path=CiudadRepLegal, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                    DisplayMemberPath="NombreCiudad"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Model="{Binding Path=ConexionCiudad, Mode=TwoWay}"
                    SearchCommand="{Binding Path=ChooseCiudadCommand}" />


                <Label
                    Name="lblCorreoElectronicoRepLegal"
                    Grid.Row="5"
                    Grid.Column="0"
                    Content="Correo Electrónico.............."
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtCorreoElectronicoRepLegal"
                    Grid.Row="5"
                    Grid.Column="1"
                    Width="250"
                    BorderThickness="1"
                    InputDataType="String"
                    IsEnabled="{Binding Path=IsEnabledDatosRetencion}"
                    IsReadOnly="{Binding Path=IsReadOnly}"
                    MaxLength="100"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=CorreoElectronicoRepLegal, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    VerticalScrollBarVisibility="Auto" />

            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
