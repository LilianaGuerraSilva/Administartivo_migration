<UserControl
    x:Class="Galac.Saw.Uil.SttDef.Views.GSInventarioMetodoCostoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Saw.Uil.SttDef.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/Galac.Saw.Uil.SttDef;component/Themes/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Margin="3"
            Header=""
            Style="{StaticResource GroupBoxStyle}" Visibility="{Binding Path=IsVisibleMetodoCosto, Converter={StaticResource booleanToVisibilityConverter}}">
            <Grid FocusManager.FocusedElement="{Binding ElementName=cmbMetodoDeCosteo}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label
                    Name="lblMetodoDeCosteo"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Método de Costeo............................................................................"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSComboBoxWpf
                    Name="cmbMetodoDeCosteo"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="150"
                    IsEnabled="{Binding Path=IsEnabled}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Path=ArrayTipoDeMetodoDeCosteo}"
                    SelectedItem="{Binding Path=MetodoDeCosteo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource ComboBoxStyle}" />
                <Label
                    Name="lblCalculoAutomaticoDeCosto"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Actualizar Costos y Ajustar Precio de Artículos en Cada Operación"
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkCalculoAutomaticoDeCosto"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=CalculoAutomaticoDeCosto}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />
                <Label
                    Name="lblMaximoGastosAdmisibles"
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Porcentaje Máximo de Gastos Admisibles......................................."
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtMaximoGastosAdmisibles"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="50"
                    BorderThickness="1"
                    InputDataType="UDecimal"
                    IsEnabled="{Binding Path=IsEnabled}"
                    MaxLength="28"
                    Maximum="12.5"
                    Minimum="0"
                    Style="{StaticResource TextBoxInputStyle}"
                    Value="{Binding Path=MaximoGastosAdmisibles, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Margin="3"
            Header="Datos Método de Costo Promedio"
            Style="{StaticResource GroupBoxStyle}"
            Visibility="{Binding Path=IsVisibleDetalleCosto, Converter={StaticResource booleanToVisibilityConverter}}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <Label
                    Name="lblFechaDesdeUsoMetodoDeCosteo"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Fecha de Inicio de Uso del Método de Costo"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSDatePickerWpf
                    Name="dtpFechaDesdeUsoMetodoDeCosteo"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="120"
                    IsEnabled="{Binding Path=IsEnabled}"
                    SelectedDate="{Binding Path=FechaDesdeUsoMetodoDeCosteo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource DatePickerStyle}" />

                <Label
                    Name="lblFechaContabilizacionDeCosteo"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Fecha Contabilización de Costeo.................."
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSDatePickerWpf
                    Name="dtpFechaContabilizacionDeCosteo"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="120"
                    IsEnabled="{Binding Path=IsEnabled}"
                    SelectedDate="{Binding Path=FechaContabilizacionDeCosteo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource DatePickerStyle}" />

                <Label
                    Name="lblComprobanteCostoDetallado"
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Comprobante Costo Detallado......................"
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkComprobanteCostoDetallado"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=ComprobanteCostoDetallado}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />


            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
