<UserControl
    x:Class="Galac.Saw.Uil.SttDef.Views.GSFacturaFacturacionContView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/Galac.Saw.Uil.SttDef;component/Themes/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        Name="GVMain"
        Margin="3"
        FocusManager.FocusedElement="{Binding ElementName=chkForzarFechaFacturaAmesEspecifico}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Margin="3"
            Header="Facturación Extemporánea"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Name="lblForzarFechaFacturaAmesEspecifico"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Forzar Fecha Factura a mes Especifico......."
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkForzarFechaFacturaAmesEspecifico"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=ForzarFechaFacturaAmesEspecifico}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />
                <Label
                    Name="lblMesFacturacionEnCurso"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Mes Facturación en Curso............................"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSComboBoxWpf
                    Name="cmbMesFacturacionEnCurso"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="120"
                    IsEnabled="{Binding Path=IsEnabledMesFacturacionEnCurso}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Path=ArrayMes}"
                    SelectedItem="{Binding Path=MesFacturacionEnCurso, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource ComboBoxStyle}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="3"
            Header="Facturación Histórica"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="29*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Name="lblPermitirIncluirFacturacionHistorica"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Permitir Incluir Facturacion Histórica............"
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkPermitirIncluirFacturacionHistorica"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=PermitirIncluirFacturacionHistorica}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />
                <Label
                    Name="lblUltimaFechaDeFacturacionHistorica"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Última Fecha de Facturación Histórica........."
                    IsEnabled="{Binding Path=IsEnabledUltimaFechaDeFacturacionHistorica}"
                    Style="{StaticResource LabelPrompt}"
                    Visibility="{Binding Path=IsChecked, ElementName=chkPermitirIncluirFacturacionHistorica}" />
                <nsWpfControls:GSDatePickerWpf
                    Name="dtpUltimaFechaDeFacturacionHistorica"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="120"
                    IsEnabled="{Binding Path=IsEnabledUltimaFechaDeFacturacionHistorica}"
                    SelectedDate="{Binding Path=UltimaFechaDeFacturacionHistorica, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource DatePickerStyle}" />
                <Label
                    Name="lblGenerarCxCalEmitirUnaFacturaHistorica"
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Generar CxC al Emitir una Factura Histórica"
                    Style="{StaticResource LabelPrompt}" />
                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,-3,3,3"
                    HorizontalAlignment="Left"
                    BorderBrush="Black"
                    BorderThickness="0.5">
                    <StackPanel HorizontalAlignment="Left">
                        <TextBlock
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            Foreground="#FFC00000"
                            Text="La configuración de Facturación Histórica aplica tanto para" />
                        <TextBlock
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            Foreground="#FFC00000"
                            Text="Factura como para Nota de Crédito y Nota de Débitos." />
                    </StackPanel>
                </Border>
                <CheckBox
                    Name="chkGenerarCxCalEmitirUnaFacturaHistorica"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=GenerarCxCalEmitirUnaFacturaHistorica}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="2"
            Grid.Column="0"
            Margin="3,3,3,3"
            VerticalAlignment="Top"
            Header="Usa Impresora Fiscal"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label
                    Name="lblUsaMaquinaFiscal"
                    Grid.Row="0"
                    Grid.Column="0"
                    Width="295"
                    Margin="3,3,3,3"
                    VerticalAlignment="Stretch"
                    Content="Usa Impresora Fiscal....................................................."
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkUsaMaquinaFiscal"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="25,0,0,0"
                    IsChecked="{Binding Path=UsaMaquinaFiscal}"
                    IsEnabled="{Binding Path=IsEnabledUsaMaquinaFiscal}"
                    Style="{StaticResource CheckBoxStyle}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="3"
            Header="Otros Cargos / Campos Extra en Detalle"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="417*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Name="lblUsarOtrosCargoDeFactura"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Usar Otros Cargo de Factura.................."
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkUsarOtrosCargoDeFactura"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=UsarOtrosCargoDeFactura}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />
                <Label
                    Name="lblUsaCamposExtrasEnRenglonFactura"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Usa Campos Extras en Renglon Factura"
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkUsaCamposExtrasEnRenglonFactura"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=UsaCamposExtrasEnRenglonFactura}"
                    IsEnabled="{Binding Path=IsEnabledCamposExtrasEnRenglonFactura}"
                    Style="{StaticResource CheckBoxStyle}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="3"
            Header="Descuentos en Facturas"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" MinWidth="140" />
                </Grid.ColumnDefinitions>

                <Label
                    Name="lblPermitirDobleDescuentoEnFactura"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Permitir Doble Descuento"
                    Style="{StaticResource LabelPrompt}"
                    Visibility="Hidden" />
                <CheckBox
                    Name="chkPermitirDobleDescuentoEnFactura"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=PermitirDobleDescuentoEnFactura}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}"
                    Visibility="Hidden" />
                <Label
                    Name="lblMaximoDescuentoEnFactura"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Máximo Descuento en Factura"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtMaximoDescuentoEnFactura"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    BorderThickness="1"
                    DecimalDigits="2"
                    InputDataType="Decimal"
                    IsEnabled="{Binding Path=IsEnabled}"
                    MaxLength="5"
                    Style="{StaticResource TextBoxInputStyle}"
                    UnitDigits="3"
                    Value="{Binding Path=MaximoDescuentoEnFactura, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </GroupBox>

        <GroupBox
            Grid.Row="3"
            Grid.Column="0"
            Margin="3"
            Header="Bloquear Emisión Al Perder Conexión con la Impresora Fiscal"
            Style="{StaticResource GroupBoxStyle}">
            <Grid Width="376">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <Label
                    Name="lblBloquearEmision"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Bloquear Emisión Al Perder Conexión con la Impresora..."
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSComboBoxWpf
                    Name="cmbBloquearEmision"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Width="200"
                    Margin="3"
                    HorizontalAlignment="Right"
                    IsEnabled="{Binding Path=IsEnabled}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Path=ArrayBloquearEmision}"
                    SelectedItem="{Binding Path=BloquearEmision, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource ComboBoxStyle}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="2,3,4,3"
            Header="Observación en Facturas"
            Style="{StaticResource GroupBoxStyle}"
            Visibility="{Binding Path=IsVisibleIFFechaReconversion, Converter={StaticResource booleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label
                    Name="lblMostrarMtoTotalBsFEnObservaciones"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="{Binding Path=PromptMostrarReconversionEnObservacion}"
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkMostrarMtoTotalBsFEnObservaciones"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=MostrarMtoTotalBsFEnObservaciones}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="3"
            Header="Facturación en Divisas"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" MinWidth="30" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label
                    Name="lblUsaListaDePrecioEnMonedaExtranjera"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Usar Lista de Precios en Moneda Extranjera..................."
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkUsaListaDePrecioEnMonedaExtranjera"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    IsChecked="{Binding Path=UsaListaDePrecioEnMonedaExtranjera}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />
                <Label
                    Name="lblUsarListaDePreciosEnMonedaExtranjeraCXC"
                    Grid.Row="1"
                    Content="Generar CxC en Moneda Extranjera.................................."
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkUsarListaDePreciosEnMonedaExtranjeraCXC"
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    IsChecked="{Binding Path=UsaListaDePrecioEnMonedaExtranjeraCXC}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Mostrar Total en Divisas ......................................................."
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkMostrarTotalEnDivisas"
                    Grid.Row="2"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    IsChecked="{Binding SeMuestraTotalEnDivisas}"
                    IsEnabled="{Binding Path=IsEnabledSeMuestraTotalEnDivisas}"
                    Style="{StaticResource CheckBoxStyle}" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Número Días a mantener Tasa de Cambio ........................"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtNroDiasMantenerTasaCambio"
                    Grid.Row="3"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    BorderThickness="1"
                    DecimalDigits="2"
                    InputDataType="UInteger"
                    IsEnabled="{Binding Path=IsEnabled}"
                    MaxLength="3"
                    Style="{StaticResource TextBoxInputStyle}"
                    UnitDigits="0"
                    Value="{Binding Path=NroDiasMantenerTasaCambio, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>
        </GroupBox>
    </Grid>

</UserControl>
