<UserControl
    x:Class="Galac.Saw.Uil.SttDef.Views.GSDatosGeneralesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Saw.Uil.SttDef.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/Galac.Saw.Uil.SttDef;component/Themes/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>


    <GroupBox Header="" Style="{StaticResource GroupBoxStyle}">
        <Grid FocusManager.FocusedElement="{Binding ElementName=chkPermitirEditarIVAenCxCCxP}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label
                Name="lblPermitirEditarIVAenCxCCxP"
                Grid.Row="0"
                Grid.Column="0"
                Content="{Binding Path=PromptIVA}"
                Style="{StaticResource LabelPrompt}"
                Visibility="{Binding Path=IsVisibleEditarIVAenCxCCxP, Converter={StaticResource booleanToVisibilityConverter}}" />
            <CheckBox
                Name="chkPermitirEditarIVAenCxCCxP"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Left"
                IsChecked="{Binding Path=PermitirEditarIVAenCxCCxP}"
                IsEnabled="{Binding Path=IsEnabled}"
                Style="{StaticResource CheckBoxStyle}"
                Visibility="{Binding Path=IsVisibleEditarIVAenCxCCxP, Converter={StaticResource booleanToVisibilityConverter}}" />
            <Label
                Name="lblUsaMultiplesAlicuotas"
                Grid.Row="1"
                Grid.Column="0"
                Content="Usa Múltiples Alícuotas (Reducida / Extendida)....................................."
                Style="{StaticResource LabelPrompt}" />
            <CheckBox
                Name="chkUsaMultiplesAlicuotas"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Left"
                IsChecked="{Binding Path=UsaMultiplesAlicuotas}"
                IsEnabled="{Binding Path=IsEnabled}"
                Style="{StaticResource CheckBoxStyle}" />
            <Label
                Name="lblOrdenamientoDeCodigoString"
                Grid.Row="2"
                Grid.Column="0"
                Content="Forma de Ordenar Códigos de Tipo Texto (Aplica para Lista de Precio)"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSComboBoxWpf
                Name="cmbOrdenamientoDeCodigoString"
                Grid.Row="2"
                Grid.Column="1"
                Width="150"
                IsEnabled="{Binding Path=IsEnabled}"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding Path=ArrayFormaDeOrdenarCodigosString}"
                SelectedItem="{Binding Path=OrdenamientoDeCodigoString, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                Style="{StaticResource ComboBoxStyle}" />

            <Label
                Name="lblImprimirComprobanteDeCxC"
                Grid.Row="3"
                Grid.Column="0"
                Content="Imprimir Comprobante de CxC..............................................................."
                Style="{StaticResource LabelPrompt}"
                Visibility="{Binding Path=IsVisibleImprimirComprobanteCxC, Converter={StaticResource booleanToVisibilityConverter}}" />
            <CheckBox
                Name="chkImprimirComprobanteDeCxC"
                Grid.Row="3"
                Grid.Column="1"
                HorizontalAlignment="Left"
                IsChecked="{Binding Path=ImprimirComprobanteDeCxC}"
                IsEnabled="{Binding Path=IsEnabled}"
                Style="{StaticResource CheckBoxStyle}"
                Visibility="{Binding Path=IsVisibleImprimirComprobanteCxC, Converter={StaticResource booleanToVisibilityConverter}}" />
            <Label
                Name="lblImprimirComprobanteDeCxP"
                Grid.Row="4"
                Grid.Column="0"
                Content="Imprimir Comprobante de CxP..............................................................."
                Style="{StaticResource LabelPrompt}"
                Visibility="{Binding Path=IsVisibleImprimirComprobanteDeCxP, Converter={StaticResource booleanToVisibilityConverter}}" />
            <CheckBox
                Name="chkImprimirComprobanteDeCxP"
                Grid.Row="4"
                Grid.Column="1"
                HorizontalAlignment="Left"
                IsChecked="{Binding Path=ImprimirComprobanteDeCxP}"
                IsEnabled="{Binding Path=IsEnabled}"
                Style="{StaticResource CheckBoxStyle}"
                Visibility="{Binding Path=IsVisibleImprimirComprobanteDeCxP, Converter={StaticResource booleanToVisibilityConverter}}" />
            <Label
                Name="lblValidarRifEnLaWeb"
                Grid.Row="5"
                Grid.Column="0"
                Content="{Binding Path=CaptionValidarRifEnLaWeb}"
                Style="{StaticResource LabelPrompt}"
                Visibility="{Binding Path=isVisibleRifEnLaWeb, Converter={StaticResource booleanToVisibilityConverter}}" />
            <CheckBox
                Name="chkValidarRifEnLaWeb"
                Grid.Row="5"
                Grid.Column="1"
                HorizontalAlignment="Left"
                IsChecked="{Binding Path=ValidarRifEnLaWeb}"
                IsEnabled="{Binding Path=IsEnabled}"
                Style="{StaticResource CheckBoxStyle}"
                Visibility="{Binding Path=isVisibleRifEnLaWeb, Converter={StaticResource booleanToVisibilityConverter}}" />
            <Label
                Name="lblUsaNotaEntrega"
                Grid.Row="6"
                Grid.Column="0"
                Content="Usa Nota de Entrega.............................................................................."
                Style="{StaticResource LabelPrompt}"/>
            <CheckBox
                Name="chkUsaNotaEntrega"
                Grid.Row="6"
                Grid.Column="1"
                HorizontalAlignment="Left"
                IsChecked="{Binding Path=UsaNotaEntrega}"
                IsEnabled="{Binding Path=IsEnabledUsaNotaEntrega}"
                Style="{StaticResource CheckBoxStyle}" />
            <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="0.5" Margin="3">
                <StackPanel>
                    <TextBlock Margin="3" TextWrapping="WrapWithOverflow"  Foreground="#FFC00000" HorizontalAlignment="Left" >
                        La notas de entrega deben ser facturadas dentro del mismo período de imposición del IVA según su calendario de declaración.
                        <LineBreak/>
                        No hacerlo puede traer sanciones por parte del ente regulador.
                    </TextBlock>
                </StackPanel>
            </Border>
            <!--<Label Grid.Row="7" Grid.Column="0" Name="lblEsSistemaParaIG" Content="Es Sistema Para IG" Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="7" Grid.Column="1" Name="chkEsSistemaParaIG" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=EsSistemaParaIG}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>-->
        </Grid>
    </GroupBox>
</UserControl>
