<UserControl
    x:Class="Galac.Saw.Uil.SttDef.Views.GSInventarioNotaEntradaSalidaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Saw.Uil.SttDef.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/Galac.Saw.Uil.SttDef;component/Themes/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <GroupBox Header="" Style="{StaticResource GroupBoxStyle}">
        <Grid FocusManager.FocusedElement="{Binding ElementName=chkImprimirNotaESconPrecio}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label
                Name="lblImprimirReporteAlIngresarNotaEntradaSalida"
                Grid.Row="0"
                Grid.Column="0"
                Content="Imprimir Nota de Entrada / Salida al Insertar........................................................................"
                Style="{StaticResource LabelPrompt}"
                Visibility="{Binding Path=IsVisibleDatosNotaEntradaSalida, Converter={StaticResource booleanToVisibilityConverter}}" />
            <CheckBox
                Name="chkImprimirReporteAlIngresarNotaEntradaSalida"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Left"
                IsChecked="{Binding Path=ImprimirReporteAlIngresarNotaEntradaSalida}"
                IsEnabled="{Binding Path=IsEnabled}"
                Style="{StaticResource CheckBoxStyle}" />
            <Label
                Name="lblNombrePlantillaNotaEntradaSalida"
                Grid.Row="1"
                Grid.Column="0"
                Content="Plantilla de Impresión............................................................................................................"
                IsEnabled="{Binding Path=IsEnabledImpresionDePlanilla}"
                Style="{StaticResource LabelPrompt}"
                Visibility="{Binding Path=IsVisibleDatosNotaEntradaSalida, Converter={StaticResource booleanToVisibilityConverter}}" />
            <nsWpfControls:GSTextBoxWpf
                Name="txtNombrePlantillaNotaEntradaSalida"
                Grid.Row="1"
                Grid.Column="1"
                Width="300"
                BorderThickness="1"
                InputDataType="Alfanumeric"
                IsEnabled="{Binding Path=IsEnabledImpresionDePlanilla}"
                MaxLength="50"
                Style="{StaticResource TextBoxInputStyle}"
                Text="{Binding Path=NombrePlantillaNotaEntradaSalida, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                Visibility="{Binding Path=IsVisibleDatosNotaEntradaSalida, Converter={StaticResource booleanToVisibilityConverter}}" />

            <Button
                Name="btnTemplate1"
                Grid.Row="1"
                Grid.Column="1"
                Width="30"
                Height="23"
                Margin="303,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Command="{Binding Path=ChooseTemplateCommandImpresion}"
                IsEnabled="{Binding Path=IsEnabledImpresionDePlanilla}">
            </Button>
            <Label
                Name="lblNombrePlantillaCodigoDeBarras"
                Grid.Row="2"
                Grid.Column="0"
                Content="Plantilla de Impresión de Códigos de Barras........................................................................"
                Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSTextBoxWpf
                Name="txtNombrePlantillaCodigoDeBarras"
                Grid.Row="2"
                Grid.Column="1"
                Width="300"
                nsWpf:LibFocusManager.FocusedPropertyName="NombrePlantillaCodigoDeBarras"
                nsWpf:LibFocusManager.IsFocused="True"
                BorderThickness="1"
                InputDataType="Alfanumeric"
                IsEnabled="{Binding Path=IsEnabled}"
                MaxLength="50"
                Style="{StaticResource TextBoxInputStyle}"
                Text="{Binding Path=NombrePlantillaCodigoDeBarras, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Name="btnTemplate2"
                Grid.Row="2"
                Grid.Column="1"
                Width="30"
                Height="23"
                Margin="303,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Command="{Binding Path=ChooseTemplateCommandCodBarra}"
                IsEnabled="{Binding Path=IsEnabled}">
            </Button>
        </Grid>
    </GroupBox>
</UserControl>
