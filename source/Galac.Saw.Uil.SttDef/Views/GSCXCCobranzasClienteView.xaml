<UserControl x:Class="Galac.Saw.Uil.SttDef.Views.GSCXCCobranzasClienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
             xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
             xmlns:nsVm="clr-namespace:Galac.Saw.Uil.SttDef.ViewModel" mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/Galac.Saw.Uil.SttDef;component/Themes/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"  />
        </ResourceDictionary>
    </UserControl.Resources>

    <GroupBox Style="{StaticResource GroupBoxStyle}" Header="">
    
        <Grid FocusManager.FocusedElement="{Binding ElementName=txtCodigoGenericoCliente}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
            
            
            <Label Grid.Row="0" Grid.Column="0" Name="lblCodigoGenericoCliente" Content="Cliente Genérico.............................................................................." Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSSeekConnection Grid.Row="0" Grid.Column="1" Name="txtCodigoGenericoCliente" Height="23" Margin="3" HorizontalAlignment="Left" Width="120" IsEnabled="{Binding Path=IsEnabled}"
                                        DisplayMemberPath="codigo"
                                        Model="{Binding Path=ConexionClienteGenerico, Mode=TwoWay}"
                                        ConnectionValue="{Binding Path=CodigoGenericoCliente, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                        SearchCommand="{Binding Path=ChooseClienteGenericoCommand}" />
            <Label Name="lblNombreClienteGenerico" Grid.Row="0" Grid.Column="2" Content="{Binding Path=NombreClienteGenerico}" Style="{StaticResource LabelCalculatedField}" Margin="3" Width="180" />
            
            <Label Grid.Row="1" Grid.Column="0" Name="lblLongitudCodigoCliente" Content="Longitud del Código del Cliente......................................................." Style="{StaticResource LabelPrompt}" Visibility="Hidden" />
            <nsWpfControls:GSTextBoxWpf Grid.Row="1" Grid.Column="1" Name="txtLongitudCodigoCliente" Style="{StaticResource TextBoxInputStyle}" InputDataType="Alfanumeric" MaxLength="11" Width="50" IsEnabled="{Binding Path=IsEnabled}"
                                        Text="{Binding Path=LongitudCodigoCliente, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" BorderThickness="1" Visibility="Hidden"/>

            <Label Grid.Row="2" Grid.Column="0" Name="lblRellenaCerosAlaIzquierda" Content="Rellena Ceros a la Izquierda..........................................................." Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="2" Grid.Column="1" Name="chkRellenaCerosAlaIzquierda" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=RellenaCerosAlaIzquierda}" HorizontalAlignment="Left" IsEnabled="False"/>
            <Label Grid.Row="3" Grid.Column="0" Name="lblAvisoDeClienteConDeuda" Content="Avisar si el Cliente Tiene una Deuda..............................................." Style="{StaticResource LabelPrompt}" Visibility="{Binding Path=IsVisibleAvisoDeClienteConDeuda, Converter={StaticResource booleanToVisibilityConverter}}"   />
            <CheckBox Grid.Row="3" Grid.Column="1" Name="chkAvisoDeClienteConDeuda" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=AvisoDeClienteConDeuda}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}" Visibility="{Binding Path=IsVisibleAvisoDeClienteConDeuda, Converter={StaticResource booleanToVisibilityConverter}}" />
            <Label Grid.Row="4" Grid.Column="0" Name="lblMontoApartirDelCualEnviarAvisoDeuda" Content="Monto a Partir del Cual Enviar Aviso de Deuda..............................." Style="{StaticResource LabelPrompt}" Visibility="{Binding Path=IsVisibleAvisoDeClienteConDeuda, Converter={StaticResource booleanToVisibilityConverter}}"  />
            <nsWpfControls:GSNumericBoxWpf Grid.Row="4" Grid.Column="1" Name="txtMontoApartirDelCualEnviarAvisoDeuda" Style="{StaticResource TextBoxInputStyle}" InputDataType="Decimal" MaxLength="28" Width="120" IsEnabled="{Binding Path=IsEnabledMontoApartirDelCualEnviarAvisoDeuda}" Visibility="{Binding Path=IsVisibleAvisoDeClienteConDeuda, Converter={StaticResource booleanToVisibilityConverter}}"
                                        Value="{Binding Path=MontoApartirDelCualEnviarAvisoDeuda, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" BorderThickness="1"/>
            <Label Grid.Row="5" Grid.Column="0" Name="lblUsaCodigoClienteEnPantalla" Content="Usar Código del Cliente al Realizar una Búsqueda........................." Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="5" Grid.Column="1" Name="chkUsaCodigoClienteEnPantalla" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=UsaCodigoClienteEnPantalla}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabledUsaCodigoClienteEnPantalla}"/>
            <Label Grid.Row="6" Grid.Column="0" Name="lblBuscarClienteXRifAlFacturar" Content="{Binding Path=PromptRIF}" Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="6" Grid.Column="1" Name="chkBuscarClienteXRifAlFacturar" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=BuscarClienteXRifAlFacturar}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabledBuscarClienteXRifAlFacturar}"/>
            <Label Grid.Row="7" Grid.Column="0" Name="lblColocarEnFacturaElVendedorAsinagoAlCliente" Content="Colocar en Factura y Cotización el Vendedor Asignado al Cliente" Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="7" Grid.Column="1" Name="chkColocarEnFacturaElVendedorAsinagoAlCliente" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=ColocarEnFacturaElVendedorAsinagoAlCliente}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>
            <Label Grid.Row="8" Grid.Column="0" Name="lblImprimirDatosClienteEnCompFiscal" Content="Imprimir Datos del Cliente en Comprobante de Impresión Fiscal...." Style="{StaticResource LabelPrompt}" Visibility="{Binding Path=isVisibleParaPeru, Converter={StaticResource booleanToVisibilityConverter}}" />
            <CheckBox Grid.Row="8" Grid.Column="1" Name="chkImprimirDatosClienteEnCompFiscal" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=ImprimirDatosClienteEnCompFiscal}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}" Visibility="{Binding Path=isVisibleParaPeru, Converter={StaticResource booleanToVisibilityConverter}}" />
            <Label Grid.Row="9" Grid.Column="0" Name="lblAvisoDeFacturacionMenor" Content="Aviso al Facturar al Mismo Cliente en un Periodo Menor a 30 Dí­as" Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="9" Grid.Column="1" Name="chkAvisoDeFacturacionMenor" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=AvisoDeFacturacionMenor}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>
            <GroupBox Style="{StaticResource GroupBoxStyle}" Header="Cliente - Campos Definibles" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="3" Visibility="{Binding Path=IsVisibleAvisoDeClienteConDeuda, Converter={StaticResource booleanToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Name="lblNombreCampoDefinibleCliente1" Content="Campo Definible 1" Style="{StaticResource LabelPrompt}" Visibility="{Binding Path=IsVisibleAvisoDeClienteConDeuda, Converter={StaticResource booleanToVisibilityConverter}}" />
                    <nsWpfControls:GSTextBoxWpf Grid.Row="0" Grid.Column="1" Name="txtNombreCampoDefinibleCliente1" Style="{StaticResource TextBoxInputStyle}" InputDataType="Alfanumeric" MaxLength="20" Width="180" IsEnabled="{Binding Path=IsEnabled}" Visibility="{Binding Path=IsVisibleAvisoDeClienteConDeuda, Converter={StaticResource booleanToVisibilityConverter}}" 
                                        Text="{Binding Path=NombreCampoDefinibleCliente1, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" BorderThickness="1"/>
                </Grid>
            </GroupBox>
    </Grid>
    </GroupBox>
</UserControl>
