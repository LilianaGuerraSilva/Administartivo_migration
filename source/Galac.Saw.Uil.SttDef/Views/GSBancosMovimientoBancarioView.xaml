<UserControl x:Class="Galac.Saw.Uil.SttDef.Views.GSBancosMovimientoBancarioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
             xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
             xmlns:nsVm="clr-namespace:Galac.Saw.Uil.SttDef.ViewModel">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/Galac.Saw.Uil.SttDef;component/Themes/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <GroupBox Style="{StaticResource GroupBoxStyle}" Header="" Visibility="{Binding Path=IsVisibleMovimientoBancario, Converter={StaticResource booleanToVisibilityConverter}}">
        <Grid FocusManager.FocusedElement="{Binding ElementName=chkMandarMensajeNumeroDeMovimientoBancario}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Name="lblMandarMensajeNumeroDeMovimientoBancario" Content="Mostrar Mensaje de Número de Movimiento Bancario.............." Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="0" Grid.Column="1" Name="chkMandarMensajeNumeroDeMovimientoBancario" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=MandarMensajeNumeroDeMovimientoBancario}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>

            <Label Grid.Row="1" Grid.Column="0" Name="lblGenerarMovBancarioDesdeCobro" Content="Generar Movimiento Bancario Desde Cobro..............................." Style="{StaticResource LabelPrompt}" />
            <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="0.5" Margin="8,-3,3,3">
                <StackPanel>
                    <TextBlock Margin="10,0,0,0" Width="280" TextWrapping="WrapWithOverflow" Text="Aplica solo para cobranzas manuales y para cobranzas generadas desde cobro directo." Foreground="#FFC00000" />
                </StackPanel>
            </Border>
            <CheckBox Grid.Row="1" Grid.Column="1" Name="chkGenerarMovBancarioDesdeCobro" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=GenerarMovBancarioDesdeCobro}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>

            <Label Grid.Row="3" Grid.Column="0" Name="lblUsaCodigoConceptoBancarioEnPantalla" Content="Usa Código Concepto Bancario en Pantalla..............................." Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="3" Grid.Column="1" Name="chkUsaCodigoConceptoBancarioEnPantalla" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=UsaCodigoConceptoBancarioEnPantalla}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>

            <Label Grid.Row="4" Grid.Column="0" Name="lblGenerarMovBancarioDesdePago" Content="Generar Movimiento Bancario Desde Pago................................" Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="4" Grid.Column="1" Name="chkGenerarMovBancarioDesdePago" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=GenerarMovBancarioDesdePago}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>

            <Label Grid.Row="5" Grid.Column="0" Name="lblNumCopiasComprobanteMovBancario" Content="Número de Copias Para Comprobante de Movimiento Bancario" Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSNumericBoxWpf Grid.Row="5" Grid.Column="1" Name="txtNumCopiasComprobanteMovBancario" Style="{StaticResource TextBoxInputStyle}" InputDataType="UInteger" MaxLength="11" Width="120" IsEnabled="{Binding Path=IsEnabled}"
                                    Value="{Binding Path=NumCopiasComprobanteMovBancario, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" BorderThickness="1"/>

            <Label Grid.Row="6" Grid.Column="0" Name="lblNombrePlantillaComprobanteDeMovBancario" Content="Plantilla de Impresión de Movimiento Bancario..........................." Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSTextBoxWpf Grid.Row="6" Grid.Column="1" Name="txtNombrePlantillaComprobanteDeMovBancario" Style="{StaticResource TextBoxInputStyle}" InputDataType="Alfanumeric" MaxLength="50" Width="200" IsEnabled="{Binding Path=IsEnabled}"
                                    Text="{Binding Path=NombrePlantillaComprobanteDeMovBancario, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" BorderThickness="1"/>
            <Button Grid.Row="6" Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="203,0,0,0" Name="btnTemplateMovBancario" VerticalAlignment="Center" Width="30" IsEnabled="{Binding Path=IsEnabled}" Command="{Binding Path=ChooseTemplateCommandMovBancario}">...</Button>

            <Label Grid.Row="7" Grid.Column="0" Name="lblConfirmarImpresionMovBancarioPorSecciones" Content="Confirmar Impresión por Secciones............................................." Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="7" Grid.Column="1" Name="chkConfirmarImpresionMovBancarioPorSecciones" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=ConfirmarImpresionMovBancarioPorSecciones}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>

            <Label Grid.Row="8" Grid.Column="0" Name="lblImprimirCompContDespuesDeChequeMovBancario" Content="Imprimir Comprobante de Cheque Inmediatamente...................." Style="{StaticResource LabelPrompt}" />
            <CheckBox Grid.Row="8" Grid.Column="1" Name="chkImprimirCompContDespuesDeChequeMovBancario" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=ImprimirCompContDespuesDeChequeMovBancario}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}"/>

            <Label Grid.Row="9" Grid.Column="0" Name="lblImprimirComprobanteDeMovBancario" Content="Imprimir Comprobante Contable de Cheque................................" Style="{StaticResource LabelPrompt}" Visibility="{Binding Path=IsVisibleImprimirComprobanteDeMovBancario, Converter={StaticResource booleanToVisibilityConverter}}" IsEnabled="{Binding Path=IsEnabledImprimirComprobanteDeMovBancario}" />
            <CheckBox Grid.Row="9" Grid.Column="1" Name="chkImprimirComprobanteDeMovBancario" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=ImprimirComprobanteDeMovBancario}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabledImprimirComprobanteDeMovBancario}" Visibility="{Binding Path=IsVisibleImprimirComprobanteDeMovBancario, Converter={StaticResource booleanToVisibilityConverter}}"/>

            <Label Grid.Row="10" Grid.Column="0" Name="lblBeneficiarioGenerico" Content="Código de Beneficiario................................................................." Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSSeekConnection Grid.Row="10" Grid.Column="1" Name="txtBeneficiarioGenerico" Height="23" Margin="3" HorizontalAlignment="Left" Width="120" IsEnabled="{Binding Path=IsEnabled}"
                                        DisplayMemberPath="Codigo"
                                        Model="{Binding Path=ConexionBeneficiarioGenerico, Mode=TwoWay}"
                                        ConnectionValue="{Binding Path=CodigoBeneficiarioGenerico, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                        SearchCommand="{Binding Path=ChooseBeneficiarioGenericoCommand}" />
            <Label Grid.Row="11" Grid.Column="0" Name="lblConceptoBancarioReversoSolicitudDePago" Content="Concepto de Reverso de Solicitud de Pago................................." Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSSeekConnection Grid.Row="11" Grid.Column="1" Name="txtConceptoBancarioReversoSolicitudDePago" Height="23" Margin="3" HorizontalAlignment="Left" Width="120" IsEnabled="{Binding Path=IsEnabled}"
                                        DisplayMemberPath="codigo"
                                        Model="{Binding Path=ConexionConceptoBancarioReversoSolicitudDePago, Mode=TwoWay}"
                                        ConnectionValue="{Binding Path=ConceptoBancarioReversoSolicitudDePago, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                        SearchCommand="{Binding Path=ChooseConceptoBancarioReversoSolicitudDePagoCommand}" />
            <Label Grid.Row="12" Grid.Column="0" Name="lblNombrePlantillaComprobanteDePagoSueldo" Content="Plantilla de Impresión de Comprobante de Pago Sueldo............." Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSTextBoxWpf Grid.Row="12" Grid.Column="1" Name="txtNombrePlantillaComprobanteDePagoSueldo" Style="{StaticResource TextBoxInputStyle}" InputDataType="Alfanumeric" MaxLength="50" Width="200" IsEnabled="{Binding Path=IsEnabled}"
                                    Text="{Binding Path=NombrePlantillaComprobanteDePagoSueldo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" BorderThickness="1"/>           
            <Button Grid.Row="12" Grid.Column="1" Height="23" HorizontalAlignment="Left" Margin="203,0,0,0" Name="btnTemplateCompSueldo" VerticalAlignment="Center" Width="30" IsEnabled="{Binding Path=IsEnabled}" Command="{Binding Path=ChooseTemplateCommandComprobanteSueldo}">...</Button>

            <Label Grid.Row="13" Grid.Column="0" Name="lblGenerarMovReversoSiAnulaPago" Content="Generar Movimiento Reverso Si Anula Pago..............................." Style="{StaticResource LabelPrompt}" Visibility="{Binding Path=IsVisibleMovReversoSiAnulaPago, Converter={StaticResource booleanToVisibilityConverter}}" />
            <CheckBox Grid.Row="13" Grid.Column="1" Name="chkGenerarMovReversoSiAnulaPago" Style="{StaticResource CheckBoxStyle}" IsChecked="{Binding Path=GenerarMovReversoSiAnulaPago}" HorizontalAlignment="Left" IsEnabled="{Binding Path=IsEnabled}" Visibility="{Binding Path=IsVisibleMovReversoSiAnulaPago, Converter={StaticResource booleanToVisibilityConverter}}"/>


        </Grid>
    </GroupBox>
</UserControl>
