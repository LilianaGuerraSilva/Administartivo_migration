<UserControl
    x:Class="Galac.Adm.Uil.CAnticipo.Reportes.GSAnticipoPorProveedorOCliente"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsARRpt="clr-namespace:LibGalac.Aos.ARRpt;assembly=LibGalac.Aos.ARRpt"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
    d:DesignHeight="212"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        FocusManager.FocusedElement="{Binding ElementName=cmbEstatusAnticipo}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Name="lblEstatusAnticipo"
            Grid.Row="0"
            Grid.Column="0"
            Content="Estatus Anticipo"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSComboBoxWpf
            Name="cmbEstatusAnticipo"
            Grid.Row="0"
            Grid.Column="1"
            Width="120"
            IsEnabled="{Binding Path=IsEnabled}"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Path=ArrayStatusAnticipo}"
            SelectedItem="{Binding Path=EstatusAnticipo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource ComboBoxStyle}"
            Margin="56,3,0,4" />
        <Label
            Name="lblCantidadAImprimir"
            Grid.Row="1"
            Grid.Column="0"
            Content="Cantidad a Imprimir"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSComboBoxWpf
            Name="cmbCantidadAImprimir"
            Grid.Row="1"
            Grid.Column="1"
            Width="120"
            IsEnabled="{Binding Path=IsEnabled}"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Path=ArrayCantidadAImprimir}"
            SelectedItem="{Binding Path=CantidadAImprimir, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource ComboBoxStyle}"
            Margin="56,3,0,3" />
        <Label
            Name="lblCodigoClientProveedor"
            Grid.Row="2"
            Grid.Column="0"
            Content="Cliente / Proveedor"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSSeekConnection
            Name="txtCodigoClientProveedor"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="70"
            Height="23"
            Margin="3"
            HorizontalAlignment="Left"
            ConnectionValue="{Binding Path=CodigoClientProveedor, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
            DisplayMemberPath="Codigo"
            IsEnabled="{Binding Path=IsEnabled}"
            Model="{Binding Path=ConexionCodigoClientProveedor, Mode=TwoWay}"
            SearchCommand="{Binding Path=ChooseCodigoClientProveedorCommand}" />
        <nsWpfControls:GSTextBoxWpf
            Name="txtNombreClientProveedor"
            Grid.Row="3"
            Width="220"
            Height="23"
            Margin="77,3,0,3"
            BorderThickness="1"
            InputDataType="Alfanumeric"
            IsReadOnly="True"
            MaxLength="160"
            Style="{StaticResource TextBoxInputStyle}"
            Text="{Binding Path=NombreClientProveedor, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Auto"
            Grid.ColumnSpan="2" />
        <Label
            Name="lblOrdenamientoClienteStatus"
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Content="Ordernar por Status o Cliente"
            Style="{StaticResource LabelPrompt}" />
        <CheckBox
            Name="chkOrdenamientoClienteStatus"
            Grid.Row="5"
            Grid.Column="1"
            Margin="160,0,0,0"
            HorizontalAlignment="Left"
            IsChecked="{Binding Path=OrdenamientoClienteStatus}"
            IsEnabled="{Binding Path=IsEnabled}"
            Style="{StaticResource CheckBoxStyle}" />
        <Label
            Name="lblMonedaDelGrupo"
            Grid.Row="6"
            Grid.Column="0"
            Content="Moneda del Grupo"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSComboBoxWpf
            Name="cmbMonedaDelGrupo"
            Grid.Row="6"
            Grid.Column="1"
            Width="120"
            IsEnabled="{Binding Path=IsEnabled}"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Path=ArrayMonedaDelGrupo}"
            SelectedItem="{Binding Path=MonedaDelGrupo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource ComboBoxStyle}"
            Margin="56,4,0,3" />
    </Grid>
</UserControl>
