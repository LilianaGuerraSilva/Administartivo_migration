<UserControl
    x:Class="Galac.Adm.Uil.CAnticipo.Reportes.GSAnticipoPorProveedorOCliente"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsARRpt="clr-namespace:LibGalac.Aos.ARRpt;assembly=LibGalac.Aos.ARRpt"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
    d:DesignHeight="250"
    d:DesignWidth="340"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid FocusManager.FocusedElement="{Binding ElementName=cmbEstatusAnticipo}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Name="lblEstatusAnticipo"
            Grid.Column="0"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            Content="Estatus Anticipo"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSComboBoxWpf
            Name="cmbEstatusAnticipo"
            Grid.Row="0"
            Grid.Column="1"
            Width="120"
            Margin="56,3,0,4"
            IsEnabled="{Binding Path=IsEnabled}"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Path=ArrayStatusAnticipo}"
            SelectedItem="{Binding Path=EstatusAnticipo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource ComboBoxStyle}" />
        <Label
            Name="lblCantidadAImprimir"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="Cantidad a Imprimir"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSComboBoxWpf
            Name="cmbCantidadAImprimir"
            Grid.Row="1"
            Grid.Column="1"
            Width="120"
            Margin="56,3,0,3"
            IsEnabled="{Binding Path=IsEnabled}"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Path=ArrayCantidadAImprimir}"
            SelectedItem="{Binding Path=CantidadAImprimir, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource ComboBoxStyle}" />
        <Label
            Name="lblCodigoClientProveedor"
            Grid.Row="2"
            Content="{Binding Path=lblClienteProveedor}"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSSeekConnection
            Name="txtCodigoClient"
            Grid.Row="3"
            Grid.Column="0"
            Width="70"
            Height="23"
            Margin="3,3,0,3"
            HorizontalAlignment="Left"
            ConnectionValue="{Binding Path=CodigoClientProveedor, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
            IsEnabled="{Binding Path=IsEnabled}"
            SearchCommand="{Binding Path=ChooseCodigoClientProveedorCommand}" />
        <nsWpfControls:GSTextBoxWpf
            Name="txtNombreClient"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Width="220"
            Height="23"
            Margin="77,3,0,3"
            BorderThickness="1"
            InputDataType="Alfanumeric"
            IsReadOnly="True"
            MaxLength="160"
            Style="{StaticResource TextBoxInputStyle}"
            Text="{Binding Path=NombreClientProveedor, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Auto" />
        <Label
            Name="lblOrdenamientoClienteStatus"
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            Content="Ordernar por Status o Cliente"
            Style="{StaticResource LabelPrompt}" />
        <CheckBox
            Name="chkOrdenamientoClienteStatus"
            Grid.Row="5"
            Grid.Column="1"
            Margin="160,0,0,0"
            HorizontalAlignment="Left"
            IsChecked="{Binding Path=OrdenamientoClienteStatus}"
            IsEnabled="{Binding Path=IsEnabled}"
            Style="{StaticResource CheckBoxStyle}" />
        <Label
            Name="lblMonedaDelGrupo"
            Grid.Row="6"
            Grid.Column="0"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            Content="Moneda del Grupo"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSComboBoxWpf
            Name="cmbMonedaDelGrupo"
            Grid.Row="6"
            Grid.Column="1"
            Width="120"
            Margin="56,4,0,3"
            IsEnabled="{Binding Path=IsEnabled}"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Path=ArrayMonedaDelGrupo}"
            SelectedItem="{Binding Path=MonedaDelGrupo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource ComboBoxStyle}" />
        <nsWpfControls:GSComboBoxWpf
            x:Name="cmbMonedasActivas"
            Grid.Row="7"
            Grid.Column="1"
            Margin="146,3,0,3"
            BorderThickness="1"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding ListaMonedasActivas}"
            SelectedItem="{Binding Moneda, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            Style="{StaticResource ComboBoxStyle}"
            Visibility="{Binding IsVisibleMonedasActivas, Converter={StaticResource booleanToVisibilityConverter}}" />
        <Label
            Name="lblTasaDeCambio"
            Grid.Row="7"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0"
            Content="Tasa de Cambio a la Fecha"
            Style="{StaticResource LabelPrompt}"
            Visibility="{Binding Path=IsVisibleTipoTasaDeCambio, Converter={StaticResource booleanToVisibilityConverter}}" />
        <nsWpfControls:GSComboBoxWpf
            Name="cmbTasaDeCambio"
            Grid.Row="8"
            Grid.Column="1"
            Margin="146,3,0,3"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Path=ArrayTiposTasaDeCambio}"
            SelectedItem="{Binding Path=TipoTasaDeCambio, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource ComboBoxStyle}"
            Visibility="{Binding Path=IsVisibleTipoTasaDeCambio, Converter={StaticResource booleanToVisibilityConverter}}" />

    </Grid>
</UserControl>
