<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
             xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
             xmlns:nsVm="clr-namespace:Galac.Dbo.Uil.Inventario.ViewModel" xmlns:Views="clr-namespace:Galac.Saw.Uil.Inventario.Views" x:Class="Galac.Dbo.Uil.Inventario.Views.GSNotaDeEntradaSalidaView"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="150" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" x:Name="lblNumeroDocumento" Content="Numero Documento" Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSTextBoxWpf Grid.Row="0" Grid.Column="1" x:Name="txtNumeroDocumento" nsWpf:LibFocusManager.IsFocused="True" nsWpf:LibFocusManager.FocusedPropertyName="NumeroDocumento" Style="{StaticResource TextBoxInputStyle}" InputDataType="Alfanumeric" MaxLength="11" Width="120" IsEnabled="{Binding IsEnabled}"
                                    Text="{Binding NumeroDocumento, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderThickness="1"/>
        <Label Grid.Row="1" Grid.Column="0" x:Name="lblTipodeOperacion" Content="Tipode Operacion" Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSComboBoxWpf Grid.Row="1" Grid.Column="1" Style="{StaticResource ComboBoxStyle}" x:Name="cmbTipodeOperacion" Width="120"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding ArrayTipodeOperacion}"
                SelectedItem="{Binding TipodeOperacion, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                IsEnabled="{Binding IsEnabled}" />
        <Label Grid.Row="2" Grid.Column="0" x:Name="lblCodigoCliente" Content="Código del Cliente" Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSSeekConnection Grid.Row="2" Grid.Column="1" x:Name="txtCodigoCliente" Height="23" Margin="3" HorizontalAlignment="Left" Width="120" IsEnabled="{Binding IsEnabled}"
                                        DisplayMemberPath="codigo"
                                        Model="{Binding ConexionCodigoCliente, Mode=TwoWay}"
                                        ConnectionValue="{Binding CodigoCliente, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                        SearchCommand="{Binding ChooseCodigoClienteCommand}" />
        <!--<Label Grid.Row="3" Grid.Column="0" Name="lblNombreCliente" Content="Nombre Cliente" Style="{StaticResource LabelPrompt}" />-->
        <nsWpfControls:GSSeekConnection Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" x:Name="txtNombreCliente" Height="23" Margin="3,4,0,4" HorizontalAlignment="Left" IsEnabled="{Binding IsEnabled}"
                                        DisplayMemberPath="nombre"
                                        Model="{Binding ConexionNombreCliente, Mode=TwoWay}"
                                        ConnectionValue="{Binding NombreCliente, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                        SearchCommand="{Binding ChooseNombreClienteCommand}" Width="332" />
        <Label Grid.Row="3" Grid.Column="0" x:Name="lblCodigoAlmacen" Content="Codigo Almacen" Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSSeekConnection Grid.Row="3" Grid.Column="1" x:Name="txtCodigoAlmacen" Height="23" Margin="3" HorizontalAlignment="Left" Width="120" IsEnabled="{Binding IsEnabled}"
                                        DisplayMemberPath="Codigo"
                                        Model="{Binding ConexionCodigoAlmacen, Mode=TwoWay}"
                                        ConnectionValue="{Binding CodigoAlmacen, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                        SearchCommand="{Binding ChooseCodigoAlmacenCommand}" />
        <!--<Label Grid.Row="5" Grid.Column="0" Name="lblNombreAlmacen" Content="Nombre Almacen" Style="{StaticResource LabelPrompt}" />-->
        <Label Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3" x:Name="lneNombreAlmacen" Content="{Binding NombreAlmacen}" Style="{StaticResource LabelCalculatedField}" Margin="3,3,0,0" Width="332" />
        <Label Grid.Row="0" Grid.Column="2" x:Name="lblFecha" Content="Fecha" Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSDatePickerWpf Grid.Row="0" Grid.Column="3" Width="120" Style="{StaticResource DatePickerStyle}" x:Name="dtpFecha"
                                       SelectedDate="{Binding Fecha, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" IsEnabled="{Binding IsEnabled}"/>
        <Label Grid.Row="4" Grid.Column="0" x:Name="lblComentarios" Content="Comentarios" Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSTextBoxWpf Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" x:Name="txtComentarios" Style="{StaticResource TextBoxInputStyle}" InputDataType="Alfanumeric" MaxLength="255" Width="458" Height="100" VerticalScrollBarVisibility="Auto" IsReadOnly="{Binding IsReadOnly}"
                                    Text="{Binding Comentarios, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" BorderThickness="1" Margin="3,3,0,3"/>
        <Label Grid.Row="0" Grid.Column="4" x:Name="lblStatusNotaEntradaSalida" Content="Status Nota Entrada Salida" Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSComboBoxWpf Grid.Row="0" Grid.Column="5" Style="{StaticResource ComboBoxStyle}" x:Name="cmbStatusNotaEntradaSalida" Width="120"
                IsSynchronizedWithCurrentItem="True"
                ItemsSource="{Binding ArrayStatusNotaEntradaSalida}"
                SelectedItem="{Binding StatusNotaEntradaSalida, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                IsEnabled="{Binding IsEnabled}" />
        <nsWpfControls:GSDataGrid
                                x:Name="dgRenglonNotaES"
                                Grid.Row="6"
                                Grid.ColumnSpan="5"
                                Height="220"
                                MinWidth="250"
                                MinHeight="200"
                                ColumnsMap="{Binding DetailRenglonNotaES.VisibleColumns}"
                                Focusable="False"
                                IsReadOnly="True"
                                IsSynchronizedWithCurrentItem="True"
                                ItemsSource="{Binding DetailRenglonNotaES.Items}"
                                KeyboardNavigation.IsTabStop="False"
                                SelectedIndex="{Binding DetailRenglonNotaES.SelectedIndex}"
                                SelectedItem="{Binding DetailRenglonNotaES.SelectedItem, Mode=OneWayToSource}"
                                Style="{StaticResource GSDataGridStyle}" />
    </Grid>
</UserControl>
