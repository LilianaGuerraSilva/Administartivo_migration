<UserControl x:Class="Galac.Saw.Uil.Inventario.Views.GSRenglonNotaESView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
             xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
             xmlns:nsVm="clr-namespace:Galac.Saw.Uil.Inventario.ViewModel"
             MinWidth="725">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Border BorderThickness="1" BorderBrush="Gray">
        <Border.CacheMode>
            <BitmapCache/>
        </Border.CacheMode>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Name="lblCodigoArticulo" Content="Artículo" Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSSeekConnection 
            Grid.Row="0" 
            Grid.Column="1" 
            Name="txtCodigoArticulo" 
            Height="23" 
            Margin="3" 
            HorizontalAlignment="Left" 
            Width="250" IsEnabled="{Binding Path=NotaESIsEnabled}"
            DisplayMemberPath="Descripcion"
            Model="{Binding Path=ConexionCodigoArticulo, Mode=TwoWay}"
            ConnectionValue="{Binding Path=CodigoArticulo, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
            SearchCommand="{Binding Path=ChooseCodigoArticuloCommand}" VerticalAlignment="Top" />
            <nsWpfControls:GSTextBoxWpf 
            Grid.Row="1" 
            Grid.Column="1" 
            Grid.ColumnSpan="4" 
            Name="txtDescripcionArticulo" 
            Height="40" 
            Margin="3" 
            HorizontalAlignment="Left" 
            Width="400" 
            IsEnabled="False"
            Text="{Binding Path=DescripcionArticulo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
            VerticalScrollBarVisibility="Auto" />
            <Label Grid.Row="2" Grid.Column="0" Name="lblCantidad" Content="Cantidad" Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSNumericBoxWpf 
            Grid.Row="2" 
            Grid.Column="1" 
            Name="txtCantidad" 
            Style="{StaticResource TextBoxInputStyle}" 
            InputDataType="UDecimal" 
            MaxLength="28" 
            Width="150" 
            IsEnabled="{Binding Path=NotaESIsEnabled}"
            Value="{Binding Path=Cantidad, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
            BorderThickness="1" 
            DecimalDigits="4"/>
            <Label 
            Visibility="{Binding Path=IsVisbleLoteDeInventario, Converter={StaticResource boolToVisibilityConverter}}" 
            Grid.Row="3" 
            Grid.Column="0" 
            Name="lblLoteDeInventario" 
            Content="Lote de Inventario" 
            Style="{StaticResource LabelPrompt}" />
            <nsWpfControls:GSSeekConnection 
            Visibility="{Binding Path=IsVisbleLoteDeInventario, Converter={StaticResource boolToVisibilityConverter}}" 
            IsEnabled="{Binding Path=IsEnabledLoteDeInventario}"
            Grid.Row="3" 
            Grid.Column="1" 
            Name="txtLoteDeInventario" 
            Height="23" 
            Margin="3" 
            HorizontalAlignment="Left" 
            Width="250"             
            DisplayMemberPath="CodigoLote"
            Model="{Binding Path=ConexionLoteDeInventario, Mode=TwoWay}"
            ConnectionValue="{Binding Path=LoteDeInventario, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
            SearchCommand="{Binding Path=ChooseLoteDeInventarioCommand}" />
            <Label 
            Visibility="{Binding Path=IsVisibleFechaLoteDeInventario, Converter={StaticResource boolToVisibilityConverter}}" 
            Grid.Row="3" 
            Grid.Column="2" 
            Name="lblFechaDeElaboracion" 
            Content="Fecha Elab." 
            Style="{StaticResource LabelPrompt}" />
            <Label
            x:Name="lneFechaDeElaboracion"
            Visibility="{Binding Path=IsVisibleFechaLoteDeInventario, Converter={StaticResource boolToVisibilityConverter}}" 
            Grid.Row="3" 
            Grid.Column="3" 
            Width="90"
            Margin="3,3,0,0"
            Content="{Binding FechaDeElaboracion}"
            ContentStringFormat="dd/MM/yyyy"
            Style="{StaticResource LabelCalculatedField}" 
            Height="25" />
            <Label 
            Visibility="{Binding Path=IsVisibleFechaLoteDeInventario, Converter={StaticResource boolToVisibilityConverter}}" 
            Grid.Row="3" 
            Grid.Column="4" 
            Name="lblFechaDeVencimiento" 
            Content="Fecha Vcto." 
            Style="{StaticResource LabelPrompt}" />
            <Label
            x:Name="lneFechaDeVencimiento"
            Visibility="{Binding Path=IsVisibleFechaLoteDeInventario, Converter={StaticResource boolToVisibilityConverter}}" 
            Grid.Row="3" 
            Grid.Column="5" 
            Width="90"
            Margin="3,3,0,0"
            Content="{Binding FechaDeVencimiento}"
            ContentStringFormat="dd/MM/yyyy"
            Style="{StaticResource LabelCalculatedField}" 
            Height="25" />
            <Label 
            Visibility="{Binding Path=IsVisbleLabelLoteNuevo, Converter={StaticResource boolToVisibilityConverter}}" 
            Grid.Row="0" 
            Grid.Column="3" 
            Grid.ColumnSpan="2" 
            Name="lneTipoDeMercancia" 
            Content="{Binding Path=TipoDeMercanciaStr}" 
            Style="{StaticResource LabelStatusGreen}" 
            HorizontalAlignment="Left" />
        </Grid>
    </Border>
</UserControl>
