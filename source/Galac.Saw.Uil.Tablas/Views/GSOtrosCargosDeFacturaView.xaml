<UserControl
    x:Class="Galac.Saw.Uil.Tablas.Views.GSOtrosCargosDeFacturaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Saw.Uil.Tablas.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="3" FocusManager.FocusedElement="{Binding ElementName=txtCodigo}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="237" />
            <ColumnDefinition Width="Auto" MinWidth="340" />
        </Grid.ColumnDefinitions>
        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="3,3,0,3"
            Style="{StaticResource GroupBoxStyle}">
            <Grid Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" MinWidth="153" />
                    <ColumnDefinition Width="Auto" MinWidth="132" />
                    <ColumnDefinition Width="Auto" MinWidth="158" />
                </Grid.ColumnDefinitions>
                <Label
                    Name="lblCodigo"
                    Width="106"
                    Height="26"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Código del Cargo"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextBoxWpf
                    Name="txtCodigo"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,5,0,5"
                    HorizontalAlignment="Stretch"
                    nsWpf:LibFocusManager.FocusedPropertyName="Codigo"
                    nsWpf:LibFocusManager.IsFocused="True"
                    BorderThickness="1"
                    InputDataType="Alfanumeric"
                    IsEnabled="{Binding Path=IsEnabled}"
                    MaxLength="15"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=Codigo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <Label
                    Name="lblStatus"
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="80,4,7,1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="Status"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSComboBoxWpf
                    Name="cmbStatus"
                    Grid.Row="0"
                    Grid.Column="3"
                    Width="158"
                    Margin="0,4,0,6"
                    HorizontalAlignment="Center"
                    IsEnabled="{Binding Path=IsEnabled}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Path=ArrayStatusOtrosCargosyDescuentosDeFactura}"
                    SelectedItem="{Binding Path=Status, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource ComboBoxStyle}" />
                <Label
                    Name="lblDescripcion"
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="76"
                    Height="26"
                    Margin="3,0,0,0"
                    VerticalAlignment="Center"
                    Content="Descripción"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSTextAreaWpf
                    Name="txtDescripcion"
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    Width="443"
                    Height="50"
                    Margin="0,4,0,3"
                    BorderThickness="1"
                    IsReadOnly="{Binding Path=IsReadOnly}"
                    MaxLength="255"
                    Style="{StaticResource TextBoxInputStyle}"
                    Text="{Binding Path=Descripcion, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="3,3,3,3"
            Header="CÁLCULO"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="230" />
                    <ColumnDefinition Width="Auto" MinWidth="200" />
                </Grid.ColumnDefinitions>
                <Label
                    Name="lblSeCalculaEnBaseA"
                    Grid.Column="0"
                    Height="24"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Content="Se Calcula en base a"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSComboBoxWpf
                    Name="cmbSeCalculaEnBaseA"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="245"
                    Margin="84,4,0,2"
                    IsEnabled="{Binding Path=IsEnabled}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Path=ArrayBaseCalculoOtrosCargosDeFactura}"
                    SelectedItem="{Binding Path=SeCalculaEnBaseA, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource ComboBoxStyle}" />
                <Label
                    Name="lblBaseFormula"
                    Grid.Row="1"
                    Grid.Column="0"
                    Height="23"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Content="Base Fórmula"
                    Style="{StaticResource LabelPrompt}"
                    Visibility="{Binding Path=IsVisibleSeCalculaEnBaseA, Converter={StaticResource booleanToVisibilityConverter}}" />
                <nsWpfControls:GSComboBoxWpf
                    Name="cmbBaseFormula"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="245"
                    Margin="84,3,0,2"
                    IsEnabled="{Binding Path=IsEnabled}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Path=ArrayBaseFormulaOtrosCargosDeFactura}"
                    SelectedItem="{Binding Path=BaseFormula, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource ComboBoxStyle}"
                    Visibility="{Binding Path=IsVisibleSeCalculaEnBaseA, Converter={StaticResource booleanToVisibilityConverter}}" />
                <Label
                    Name="lblMonto"
                    Grid.Row="1"
                    Grid.Column="0"
                    Height="24"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Content="Monto"
                    Style="{StaticResource LabelPrompt}"
                    Visibility="{Binding Path=IsVisibleMonto, Converter={StaticResource booleanToVisibilityConverter}}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtMonto"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="245"
                    Margin="84,3,0,3"
                    BorderThickness="1"
                    InputDataType="UDecimal"
                    IsEnabled="{Binding Path=IsEnabled}"
                    MaxLength="28"
                    Style="{StaticResource TextBoxInputStyle}"
                    Visibility="{Binding Path=IsVisibleMonto, Converter={StaticResource booleanToVisibilityConverter}}"
                    Value="{Binding Path=Monto, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <Label
                    Name="lblPorcentajeSobreBase"
                    Grid.Row="2"
                    Grid.Column="0"
                    Height="26"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Content="Porcentaje Sobre Base"
                    Style="{StaticResource LabelPrompt}"
                    Visibility="{Binding Path=IsVisibleSeCalculaEnBaseA, Converter={StaticResource booleanToVisibilityConverter}}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtPorcentajeSobreBase"
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="245"
                    Margin="84,3,0,3"
                    BorderThickness="1"
                    DecimalDigits="2"
                    InputDataType="UDecimal"
                    IsEnabled="{Binding Path=IsEnabled}"
                    MaxLength="28"
                    Style="{StaticResource TextBoxInputStyle}"
                    Visibility="{Binding Path=IsVisibleSeCalculaEnBaseA, Converter={StaticResource booleanToVisibilityConverter}}"
                    Value="{Binding Path=PorcentajeSobreBase, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <Label
                    Name="lblSustraendo"
                    Grid.Row="3"
                    Grid.Column="0"
                    Height="23"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Content="Sustraendo"
                    Style="{StaticResource LabelPrompt}"
                    Visibility="{Binding Path=IsVisibleSeCalculaEnBaseA, Converter={StaticResource booleanToVisibilityConverter}}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtSustraendo"
                    Grid.Row="3"
                    Grid.Column="1"
                    Width="245"
                    Margin="84,3,0,3"
                    BorderThickness="1"
                    InputDataType="UDecimal"
                    IsEnabled="{Binding Path=IsEnabled}"
                    MaxLength="28"
                    Style="{StaticResource TextBoxInputStyle}"
                    Visibility="{Binding Path=IsVisibleSeCalculaEnBaseA, Converter={StaticResource booleanToVisibilityConverter}}"
                    Value="{Binding Path=Sustraendo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <Label
                    Name="lbletiquetaformula"
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="452"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    Background="{x:Null}"
                    Content="Fórmula  =  Base  *  Porcentaje  - Sustraendo"
                    FontSize="22"
                    Foreground="#FFA70606"
                    Style="{StaticResource LabelHeaderStyle}"
                    Visibility="{Binding Path=IsVisibleEtiquetaFormula, Converter={StaticResource booleanToVisibilityConverter}}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="3,3,3,3"
            Header="IMPRIMIR"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label
                    Name="lblComoAplicaAlTotalFactura"
                    Grid.Column="0"
                    Width="166"
                    Height="26"
                    Margin="3,0,0,0"
                    VerticalAlignment="Center"
                    Content="Cómo aplíca al Total Factura"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSComboBoxWpf
                    Name="cmbComoAplicaAlTotalFactura"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="242"
                    Margin="148,3,0,2"
                    IsEnabled="{Binding Path=IsEnabled}"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding Path=ArrayComoAplicaOtrosCargosDeFactura}"
                    SelectedItem="{Binding Path=ComoAplicaAlTotalFactura, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource ComboBoxStyle}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="3,3,3,3"
            Header="CUENTA CONTABLE"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label
                    Name="lblCuentaContableOtrosCargos"
                    Height="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="Cuenta Contable"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSSeekConnection
                    Name="txtCuentaContableOtrosCargos"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="216"
                    Margin="0,3,0,3"
                    HorizontalAlignment="Left"
                    ConnectionValue="{Binding Path=CuentaContableOtrosCargos, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                    DisplayMemberPath="Codigo"
                    IsEnabled="{Binding Path=IsEnabledCuentaContableOtrosCargos}"
                    MaxLength="30"
                    Model="{Binding Path=ConexionCuentaContableOtrosCargos, Mode=TwoWay}"
                    SearchCommand="{Binding Path=ChooseCuentaContableCommand}" />
                <Label
                    Name="lblDescripcionCuentaContableOtrosCargos"
                    Grid.Row="1"
                    Grid.Column="1"
                    Height="24"
                    Margin="3,3,3,3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Content="{Binding Path=CuentaContableOtrosCargosDescripcion}"
                    Foreground="Black"
                    Style="{StaticResource LabelPrompt}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="3"
            Grid.Column="0"
            Margin="3,3,0,3"
            Header="COMISIÓN"
            Style="{StaticResource GroupBoxStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label
                    Name="lblPorcentajeComision"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="% Comisión"
                    Style="{StaticResource LabelPrompt}" />
                <nsWpfControls:GSNumericBoxWpf
                    Name="txtPorcentajeComision"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="63"
                    Margin="3,3,0,3"
                    BorderThickness="1"
                    DecimalDigits="2"
                    InputDataType="UDecimal"
                    IsEnabled="{Binding Path=IsEnabledExcluirDeComision}"
                    MaxLength="3"
                    Style="{StaticResource TextBoxInputStyle}"
                    Value="{Binding Path=PorcentajeComision, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                <Label
                    Name="lblExcluirDeComision"
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Excluir de las Comisiones"
                    Style="{StaticResource LabelPrompt}" />
                <CheckBox
                    Name="chkExcluirDeComision"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding Path=ExcluirDeComision}"
                    IsEnabled="{Binding Path=IsEnabled}"
                    Style="{StaticResource CheckBoxStyle}" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
