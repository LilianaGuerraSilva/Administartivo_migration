                            Grid.Row="0"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="DEBE"
                            FontSize="12" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="HABER"
                            FontSize="12" />

                        <Label
                            Name="lblCuentaCxCClientes"
                            Grid.Row="1"
