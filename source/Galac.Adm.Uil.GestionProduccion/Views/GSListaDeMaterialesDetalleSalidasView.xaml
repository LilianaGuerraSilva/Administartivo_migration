<UserControl
    x:Class="Galac.Adm.Uil.GestionProduccion.Views.GSListaDeMaterialesDetalleSalidasView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Adm.Uil.GestionProduccion.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
    Width="910">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Name="lblCodigoArticuloInventario"
            Grid.Column="0"
            Width="104"
            Height="24"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            Content="Código Inventario"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSSeekConnection
            Name="txtCodigoArticuloInventario"
            Grid.Row="0"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="4,3,10,4"
            ConnectionValue="{Binding Path=CodigoArticuloInventario, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
            DisplayMemberPath="Codigo"
            IsEnabled="{Binding Path=IsEnabled}"
            Model="{Binding Path=ConexionCodigoArticuloInventario, Mode=TwoWay}"
            SearchCommand="{Binding Path=ChooseCodigoArticuloInventarioCommand}" />
        <Label
            Name="lneTipoDeArticuloInv"
            Grid.Row="0"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Width="244"
            Margin="4,4,0,5"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Left"
            Content="{Binding Path=TipoArticuloInvStr}"
            Style="{StaticResource LabelStatusGreen}"
            Visibility="{Binding Path=IsVisbleTipoArticuloInvStr, Converter={StaticResource booleanToVisibilityConverter}}" />
        <nsWpfControls:GSTextAreaWpf
            Name="txtDescripcionArticuloInventario"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="7"
            Width="699"
            Height="50"
            Margin="4,3,0,4"
            nsWpf:LibKeyboardListener.IgnoreEnterKeyLikeTab="True"
            AcceptsReturn="True"
            IsReadOnly="True"
            MaxLength="7000"
            Style="{StaticResource TextBoxInputStyle}"
            Text="{Binding Path=DescripcionArticuloInventario, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Auto" />
        <Label
            Name="lblCantidad"
            Grid.Row="2"
            Grid.Column="0"
            Width="58"
            Height="24"
            Margin="3,0,0,0"
            VerticalAlignment="Center"
            Content="Cantidad"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSNumericBoxWpf
            Name="txtCantidad"
            Grid.Row="2"
            Grid.Column="1"
            Width="120"
            Margin="4,4,11,6"
            HorizontalAlignment="Left"
            BorderThickness="1"
            DecimalDigits="{Binding Path=DecimalDigits}"
            InputDataType="UDecimal"
            IsEnabled="{Binding Path=IsEnabled}"
            Style="{StaticResource TextBoxInputStyle}"
            Value="{Binding Path=Cantidad, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Name="lblPorcentajeDeCosto"
            Grid.Row="2"
            Grid.Column="4"
            Height="24"
            Margin="0,0,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Content="% Costo"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSNumericBoxWpf
            Name="txtPorcentajeDeCosto"
            Grid.Row="2"
            Grid.Column="5"
            Width="105"
            Margin="4,4,0,5"
            HorizontalAlignment="Center"
            BorderThickness="1"
            DecimalDigits="8"
            InputDataType="UDecimal"
            IsEnabled="{Binding Path=IsEnabled}"
            MaxLength="30"
            Style="{StaticResource TextBoxInputStyle}"
            Value="{Binding Path=PorcentajeDeCosto, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Name="lblMermaNormal"
            Grid.Row="2"
            Grid.Column="2"
            Height="24"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Content="Merma Normal (esperada)"
            Style="{StaticResource LabelPrompt}"
            Visibility="{Binding Path=IsVisibleCantidadMerma, Converter={StaticResource booleanToVisibilityConverter}}" />
        <nsWpfControls:GSNumericBoxWpf
            Name="txtMermaNormal"
            Grid.Row="2"
            Grid.Column="3"
            Width="120"
            Margin="4,4,4,6"
            HorizontalAlignment="Right"
            BorderThickness="1"
            DecimalDigits="8"
            InputDataType="UDecimal"
            IsEnabled="{Binding Path=IsEnabled}"
            MaxLength="30"
            Style="{StaticResource TextBoxInputStyle}"
            Visibility="{Binding Path=IsVisibleCantidadMerma, Converter={StaticResource booleanToVisibilityConverter}}"
            Value="{Binding Path=MermaNormal, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
