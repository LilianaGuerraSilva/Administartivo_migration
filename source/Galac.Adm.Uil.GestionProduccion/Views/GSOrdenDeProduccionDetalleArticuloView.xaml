<UserControl
    x:Class="Galac.Adm.Uil.GestionProduccion.Views.GSOrdenDeProduccionDetalleArticuloView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsVm="clr-namespace:Galac.Adm.Uil.GestionProduccion.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            Name="lblCodigoArticulo"
            Grid.Row="0"
            Grid.Column="0"
            Content="Código"
            Style="{StaticResource LabelPrompt}" />
        <Label
            Name="lneCodigoArticulo"
            Grid.Row="0"
            Grid.Column="1"
            Width="170"
            Margin="3,3,0,0"
            Content="{Binding Path=CodigoArticulo}"
            Style="{StaticResource LabelCalculatedField}" />
        <nsWpfControls:GSTextAreaWpf
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="2"
            Grid.ColumnSpan="4"
            Width="500"
            Height="60"
            VerticalAlignment="Top"
            BorderThickness="1"
            IsEnabled="True"
            IsReadOnly="True"
            Style="{StaticResource TextBoxInputStyle}"
            Text="{Binding Path=DescripcionArticulo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Auto" />
        <Label
            Name="lblPorcentajeCostoEstimado"
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Right"
            Content="% Costo Est."
            Style="{StaticResource LabelPrompt}"
            Visibility="{Binding Path=IsVisiblePorcentajeCostoEstimado, Converter={StaticResource booleanToVisibilityConverter}}" />
        <nsWpfControls:GSNumericBoxWpf
            Name="txtPorcentajeCostoEstimado"
            Grid.Row="2"
            Grid.Column="3"
            Width="120"
            BorderThickness="1"
            DecimalDigits="8"
            InputDataType="UDecimal"
            IsEnabled="{Binding Path=IsEnabledPorcentajeCostoEstimado}"
            MaxLength="34"
            Style="{StaticResource TextBoxInputStyle}"
            Visibility="{Binding Path=IsVisiblePorcentajeCostoEstimado, Converter={StaticResource booleanToVisibilityConverter}}"
            Value="{Binding Path=PorcentajeCostoEstimado, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Name="lblCantidadProducida"
            Grid.Row="2"
            Grid.Column="4"
            HorizontalAlignment="Right"
            Content="Cantidad Producida"
            Style="{StaticResource LabelPrompt}"
            Visibility="{Binding Path=IsVisibleCantidadProducida, Converter={StaticResource booleanToVisibilityConverter}}" />
        <nsWpfControls:GSNumericBoxWpf
            Name="txtCantidadProducida"
            Grid.Row="2"
            Grid.Column="5"
            Width="120"
            BorderThickness="1"
            DecimalDigits="8"
            InputDataType="UDecimal"
            IsEnabled="{Binding Path=IsEnabledCantidadProducida}"
            MaxLength="34"
            Style="{StaticResource TextBoxInputStyle}"
            Visibility="{Binding Path=IsVisibleCantidadProducida, Converter={StaticResource booleanToVisibilityConverter}}"
            Value="{Binding Path=CantidadProducida, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />        
        <Label
            Name="lblPorcentajeCostoCierre"
            Grid.Row="2"
            Grid.Column="6"
            HorizontalAlignment="Right"
            Content="% Costo Cierre"
            Style="{StaticResource LabelPrompt}"
            Visibility="{Binding Path=IsVisiblePorcentajeCostoCierre, Converter={StaticResource booleanToVisibilityConverter}}" />
        <nsWpfControls:GSNumericBoxWpf
            Name="txtPorcentajeCostoCierre"
            Grid.Row="2"
            Grid.Column="7"
            Width="120"
            BorderThickness="1"
            DecimalDigits="8"
            InputDataType="UDecimal"
            IsEnabled="{Binding Path=IsEnabledPorcentajeCostoCierre}"
            MaxLength="34"
            Style="{StaticResource TextBoxInputStyle}"
            Visibility="{Binding Path=IsVisiblePorcentajeCostoCierre, Converter={StaticResource booleanToVisibilityConverter}}"
            Value="{Binding Path=PorcentajeCostoCierre, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
