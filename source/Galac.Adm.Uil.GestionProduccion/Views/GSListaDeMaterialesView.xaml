<UserControl
    x:Class="Galac.Adm.Uil.GestionProduccion.Views.GSListaDeMaterialesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nsV="clr-namespace:Galac.Adm.Uil.GestionProduccion.Views"
    xmlns:nsVm="clr-namespace:Galac.Adm.Uil.GestionProduccion.ViewModel"
    xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
    xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdButton.xaml" />
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdGroupBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
            <DataTemplate x:Key="GroupBoxHeaderTemplate">
                <TextBlock
                    FontWeight="Bold"
                    Foreground="Navy"
                    Text="{Binding}" />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid FocusManager.FocusedElement="{Binding ElementName=txtCodigo}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="593" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  aqui los groupbox  -->
        <Label
            Name="lblFechaCreacion"
            Grid.Row="0"
            Grid.Column="0"
            Content="Fecha de Creación"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSDatePickerWpf
            Name="dtpFechaCreacion"
            Grid.Row="0"
            Grid.Column="1"
            Width="120"
            IsEnabled="False"
            SelectedDate="{Binding Path=FechaCreacion, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource DatePickerStyle}" />
        <Label
            Name="lblCodigo"
            Grid.Row="1"
            Grid.Column="0"
            Content="Código"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSTextBoxWpf
            Name="txtCodigo"
            Grid.Row="1"
            Grid.Column="1"
            Width="170"
            Margin="3,3,0,3"
            nsWpf:LibFocusManager.FocusedPropertyName="Codigo"
            nsWpf:LibFocusManager.IsFocused="True"
            BorderThickness="1"
            InputDataType="Alfanumeric"
            IsEnabled="{Binding Path=IsEnabledCodigo}"
            MaxLength="30"
            Style="{StaticResource TextBoxInputStyle}"
            Text="{Binding Path=Codigo, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Name="lblNombre"
            Grid.Row="2"
            Grid.Column="0"
            Content="Nombre"
            Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSTextAreaWpf
            Name="txtNombre"
            Grid.Row="2"
            Grid.Column="1"
            Width="582"
            Height="45"
            Margin="3,3,0,3"
            nsWpf:LibKeyboardListener.IgnoreEnterKeyLikeTab="True"
            AcceptsReturn="True"
            InvalidCharacters="&quot;|@°¬!#$%&amp;/()=?'¡¿¨;,:*+~&lt;&gt;^''{}"
            IsReadOnly="{Binding Path=IsReadOnly}"
            MaxLength="255"
            Style="{StaticResource TextBoxInputStyle}"
            Text="{Binding Path=Nombre, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Auto" />
        <!--  aqui llamado al detalle  -->
        <Grid Grid.Row="7" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ScrollViewer
                Grid.ColumnSpan="2"
                Margin="3,3,-95,3"
                VerticalScrollBarVisibility="Auto">
                <TabControl
                    Name="tbcArticulos"
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="700"
                    Margin="3">
                    <TabItem Name="tbiSeccionListaDeMaterialesDetalleArticuloInventario" Header="Insumos">
                        <Grid Name="gtSeccionListaDeMaterialesDetalleArticuloInventario">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <ContentControl
                                x:Name="dListaDeMaterialesDetalleArticulo"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Content="{Binding Path=DetailListaDeMaterialesDetalleArticulo.SelectedItem}"
                                Focusable="False"
                                IsEnabled="{Binding Path=IsEnabled}" />
                            <Border
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Height="25"
                                Background="Transparent"
                                BorderBrush="LightGray"
                                BorderThickness="0,0,0,1">
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        nsWpf:LibKeyboardListener.FocusTarget="{Binding ElementName=dListaDeMaterialesDetalleArticulo}"
                                        Command="{Binding Path=DetailListaDeMaterialesDetalleArticulo.CreateCommand}"
                                        IsEnabled="{Binding Path=IsEnabled}"
                                        Style="{StaticResource MenuButtonStyle}"
                                        ToolTip="Nuevo">
                                        <Image Focusable="False" Source="/LibGalac.Aos.UI.WpfRD;component/Images/add.png" />
                                    </Button>
                                    <Button
                                        Command="{Binding Path=DetailListaDeMaterialesDetalleArticulo.DeleteCommand}"
                                        IsEnabled="{Binding Path=IsEnabled}"
                                        Style="{StaticResource MenuButtonStyle}"
                                        ToolTip="Eliminar">
                                        <Image Focusable="False" Source="/LibGalac.Aos.UI.WpfRD;component/Images/delete.png" />
                                    </Button>
                                </StackPanel>
                            </Border>
                            <nsWpfControls:GSDataGrid
                                Name="dgDetailListaMateriales"
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Height="220"
                                MinWidth="250"
                                MinHeight="200"
                                ColumnsMap="{Binding Path=DetailListaDeMaterialesDetalleArticulo.VisibleColumns}"
                                Focusable="False"
                                IsReadOnly="True"
                                IsSynchronizedWithCurrentItem="True"
                                ItemsSource="{Binding Path=DetailListaDeMaterialesDetalleArticulo.Items}"
                                KeyboardNavigation.IsTabStop="False"
                                SelectedIndex="{Binding Path=DetailListaDeMaterialesDetalleArticulo.SelectedIndex}"
                                SelectedItem="{Binding Path=DetailListaDeMaterialesDetalleArticulo.SelectedItem, Mode=OneWayToSource}"
                                Style="{StaticResource GSDataGridStyle}" />
                        </Grid>
                    </TabItem>
                    <TabItem Name="tbiSeccionListaDeMaterialesDetalleSalidas" Header="Salidas">
                        <Grid Name="gtSeccionListaDeMaterialesDetalleSalidas">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <ContentControl
                                x:Name="dListaDeMaterialesDetalleSalidas"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.ColumnSpan="2"
                                Content="{Binding Path=DetailListaDeMaterialesDetalleSalidas.SelectedItem}"
                                Focusable="False"
                                IsEnabled="{Binding Path=IsEnabled}" />
                            <Border
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Height="25"
                                Background="Transparent"
                                BorderBrush="LightGray"
                                BorderThickness="0,0,0,1">
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        nsWpf:LibKeyboardListener.FocusTarget="{Binding ElementName=dListaDeMaterialesDetalleSalidas}"
                                        Command="{Binding Path=DetailListaDeMaterialesDetalleSalidas.CreateCommand}"
                                        IsEnabled="{Binding Path=IsEnabled}"
                                        Style="{StaticResource MenuButtonStyle}"
                                        ToolTip="Nuevo">
                                        <Image Focusable="False" Source="/LibGalac.Aos.UI.WpfRD;component/Images/add.png" />
                                    </Button>
                                    <Button
                                        Command="{Binding Path=DetailListaDeMaterialesDetalleSalidas.DeleteCommand}"
                                        IsEnabled="{Binding Path=IsEnabled}"
                                        Style="{StaticResource MenuButtonStyle}"
                                        ToolTip="Eliminar">
                                        <Image Focusable="False" Source="/LibGalac.Aos.UI.WpfRD;component/Images/delete.png" />
                                    </Button>
                                </StackPanel>
                            </Border>
                            <nsWpfControls:GSDataGrid
                                Name="dgDetailListaMaterialesSalidas"
                                Grid.Row="2"
                                MinWidth="250"
                                MinHeight="200"
                                Margin="0,10,0,0"
                                ColumnsMap="{Binding Path=DetailListaDeMaterialesDetalleSalidas.VisibleColumns}"
                                Focusable="False"
                                IsReadOnly="True"
                                IsSynchronizedWithCurrentItem="True"
                                ItemsSource="{Binding Path=DetailListaDeMaterialesDetalleSalidas.Items}"
                                KeyboardNavigation.IsTabStop="False"
                                SelectedIndex="{Binding Path=DetailListaDeMaterialesDetalleSalidas.SelectedIndex}"
                                SelectedItem="{Binding Path=DetailListaDeMaterialesDetalleSalidas.SelectedItem, Mode=OneWayToSource}"
                                Style="{StaticResource GSDataGridStyle}" />
                            <ContentControl Grid.Row="3">
                                <Grid x:Name="gtTotalCosto" Width="690">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="607" />
                                        <ColumnDefinition Width="Auto" MinWidth="79" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Name="lblTotalCosto"
                                        Width="87"
                                        Height="24"
                                        Margin="520,0,0,0"
                                        VerticalAlignment="Center"
                                        Content="Total % Costo:"
                                        Foreground="Black"
                                        Style="{StaticResource LabelPrompt}" />
                                    <Label
                                        Name="lnesumTotalCosto"
                                        Grid.Column="1"
                                        Height="24"
                                        HorizontalContentAlignment="Right"
                                        Content="{Binding Path=PorcentajeDeCostoTotalStr, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                        Foreground="Black"
                                        Style="{StaticResource LabelPrompt}" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="0,0,3,0" RenderTransformOrigin="0.5,0.5" >
                                        <Label.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform/>
                                                <SkewTransform/>
                                                <RotateTransform Angle="-0.021"/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Label.RenderTransform>
                                    </Label>
                                </Grid>
                            </ContentControl>
                        </Grid>
                    </TabItem>
                </TabControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
