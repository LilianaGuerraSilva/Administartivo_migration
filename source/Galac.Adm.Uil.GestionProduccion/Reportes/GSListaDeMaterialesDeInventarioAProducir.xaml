<UserControl x:Class="Galac.Adm.Uil.GestionProduccion.Reportes.GSListaDeMaterialesDeInventarioAProducir"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nsWpf="clr-namespace:LibGalac.Aos.UI.Wpf;assembly=LibGalac.Aos.UI.Wpf"
             xmlns:nsARRpt="clr-namespace:LibGalac.Aos.ARRpt;assembly=LibGalac.Aos.ARRpt"
             xmlns:nsWpfControls="clr-namespace:LibGalac.Aos.UI.WpfControls;assembly=LibGalac.Aos.UI.WpfControls"
             mc:Ignorable="d"
             d:DesignHeight="150"
             d:DesignWidth="440">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LibGalac.Aos.UI.WpfRD;component/rsdInputControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="261" />
            <ColumnDefinition Width="14*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Name="lblCantidadAImprimir"
               Content="Cantidad a Imprimir"
               Style="{StaticResource LabelPrompt}" />
        <ComboBox Grid.Row="0"
                  Grid.Column="1"
                  x:Name="cmbCantidadAImprimir"
                  Style="{StaticResource ComboBoxStyle}"
                  IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding Path=ECantidadAImprimir}"
                  SelectedItem="{Binding Path=CantidadAImprimir, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <Label Grid.Row="1"
               Grid.Column="0"
               Name="lblCodigoInventarioAProducir"
               Content="Codigo Inventario a Producir"
               Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSSeekConnection Grid.Row="1"
                                        Grid.Column="1"
                                        Name="txtCodigoArticuloInventario"
                                        Height="23"
                                        Margin="3"
                                        HorizontalAlignment="Left"
                                        Width="220"
                                        IsEnabled="{Binding Path=IsEnabledCodigoArticuloInventario}"
                                        DisplayMemberPath="Codigo"
                                        Model="{Binding Path=ConexionCodigoArticuloInventario, Mode=TwoWay}"
                                        ConnectionValue="{Binding Path=CodigoArticuloInventario, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                        SearchCommand="{Binding Path=ChooseCodigoArticuloInventarioCommand}" />
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   Name="lblDescripcionArticuloInventario"
                   Text="{Binding Path=DescripcionArticuloInventario}"
                   Style="{StaticResource TextBlockFeatureInfo}"
                   Width="220"
                   MinHeight="50"
                   Margin="3" />
        <Label Grid.Row="3"
               Grid.Column="0"
               Name="lblCantidad"
               Content="Cantidad a Producir"
               Style="{StaticResource LabelPrompt}" />
        <nsWpfControls:GSNumericBoxWpf Grid.Row="3"
                                       Grid.Column="1"
                                       Name="txtCantidadAProducir"
                                       Style="{StaticResource TextBoxInputStyle}"
                                       InputDataType="UDecimal"
                                       MaxLength="34"
                                       Width="120"
                                       IsEnabled="{Binding Path=IsEnabled}"
                                       Value="{Binding Path=CantidadAProducir, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                       BorderThickness="1"
                                       DecimalDigits="{Binding Path=DecimalDigits}" />

    </Grid>
</UserControl>
